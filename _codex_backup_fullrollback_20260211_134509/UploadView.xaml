<UserControl x:Class="DCM.App.Views.UploadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:DCM.App.Models"
             xmlns:core="clr-namespace:DCM.Core.Models;assembly=DCM.Core"
             xmlns:config="clr-namespace:DCM.Core.Configuration;assembly=DCM.Core"
             xmlns:conv="clr-namespace:DCM.App.Infrastructure.Converters"
             xmlns:ap="clr-namespace:DCM.App.Infrastructure.AttachedProperties">
  <UserControl.Resources>
    <!-- IsStringToVisibilityConverter is defined centrally in Theme.Standard.Base.Controls.xaml -->
    <conv:HeightToWidthConverter x:Key="HeightToWidth16x9"
                                 Ratio="1.7777777777777777"/>
</UserControl.Resources>
  <Grid x:Name="RootGrid"
      Margin="{DynamicResource ViewRootMargin}"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="{DynamicResource SpacingL}"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- HEADER -->
    <StackPanel x:Name="HeaderPanel"
                Grid.Row="0"
                Visibility="Collapsed"/>

    <!-- FILES + DETAILS CONTAINER -->
    <Border Grid.Row="4"
            Background="Transparent"
            BorderThickness="0"
            Margin="0"
            VerticalAlignment="Stretch">
        <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition x:Name="UploadListColumn"
                            Width="320"/>
          <ColumnDefinition x:Name="UploadListDividerColumn"
                            Width="0"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="UploadListDivider"
                Grid.Column="1"
                Visibility="Collapsed"/>

        <Grid x:Name="UploadListPanel"
              Grid.Column="0"
              Margin="10,12,0,0">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>

          <Border Grid.Row="0"
                  Background="{DynamicResource SurfaceElevatedBrush}"
                  BorderBrush="{DynamicResource BorderBrush}"
                  BorderThickness="{DynamicResource BorderThickness1}"
                  CornerRadius="{DynamicResource RadiusM}"
                  Margin="0,0,8,8"
                  Padding="8">
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <Button Grid.Row="0"
                      x:Name="UploadListTopUploadButton"
                      Style="{DynamicResource Control.Button.Primary.L}"
                      Click="UploadButton_Click"
                      ap:ButtonIcon.Glyph="&#xe2c6;"
                      Content="{DynamicResource Upload.Actions.UploadVideos}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Height="56"
                      Margin="0"/>

              <Button Grid.Row="2"
                      x:Name="UploadListAddVideosButton"
                      Style="{DynamicResource Control.Button.Secondary}"
                      Click="AddVideosButton_Click"
                      ap:ButtonIcon.Glyph="&#xe145;"
                      Content="{DynamicResource Upload.AddVideos}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Height="{Binding ElementName=UploadListTopUploadButton, Path=ActualHeight}"
                      Margin="0"/>

              <Grid Grid.Row="3"
                    Margin="2,10,2,0">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{DynamicResource Upload.Actions.AutoTranscribe}"
                           FontSize="{DynamicResource FontSizeM}"
                           FontWeight="{DynamicResource FontWeightSemiBold}"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <ToggleButton Grid.Column="1"
                              x:Name="AutoTranscribeToggleButton"
                              Style="{DynamicResource Control.Accounts.ServiceCard.AutoConnect.Toggle}"
                              Width="64"
                              Height="22"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              ToolTip="{DynamicResource Upload.Tooltip.AutoTranscribeSwitch}"
                              Checked="AutoTranscribeToggleButton_Checked"
                              Unchecked="AutoTranscribeToggleButton_Unchecked"/>
              </Grid>
            </Grid>
          </Border>

          <Border Grid.Row="1"
                  Padding="0">
            <ListBox x:Name="UploadItemsListBox"
                     BorderThickness="0"
                     Background="{x:Null}"
                     UseLayoutRounding="True"
                     SnapsToDevicePixels="True"
                     SelectionMode="Single"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     VirtualizingStackPanel.ScrollUnit="Pixel"
                     ScrollViewer.CanContentScroll="True"
                     VerticalAlignment="Stretch"
                     SelectionChanged="UploadItemsListBox_SelectionChanged"
                     RequestBringIntoView="UploadItemsListBox_RequestBringIntoView">
          <ListBox.Resources>
            <Style TargetType="ScrollViewer"
                   BasedOn="{StaticResource Control.ScrollViewer.LeftBar}"/>
          </ListBox.Resources>
          <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
              <Setter Property="Margin"
                      Value="0,0,0,6"/>
              <Setter Property="Padding"
                      Value="0"/>
              <Setter Property="HorizontalContentAlignment"
                      Value="Stretch"/>
              <Setter Property="Background"
                      Value="Transparent"/>
              <Setter Property="BorderThickness"
                      Value="0"/>
              <Setter Property="FocusVisualStyle"
                      Value="{x:Null}"/>
              <Setter Property="SnapsToDevicePixels"
                      Value="True"/>
              <Setter Property="UseLayoutRounding"
                      Value="True"/>
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                      <ContentPresenter Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
            </Style>
          </ListBox.ItemContainerStyle>
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Border x:Name="UploadItemCard"
                      Height="88"
                      Padding="10,8,10,8"
                      SnapsToDevicePixels="True"
                      UseLayoutRounding="True">
                <Border.Style>
                  <Style TargetType="Border">
                    <Setter Property="Background"
                            Value="{DynamicResource SurfaceElevatedBrush}"/>
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource BorderBrush}"/>
                    <Setter Property="BorderThickness"
                            Value="1"/>
                    <Setter Property="CornerRadius"
                            Value="{DynamicResource RadiusS}"/>
                    <Setter Property="Margin"
                            Value="0"/>
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}"
                                   Value="True">
                        <Setter Property="Background"
                                Value="{DynamicResource SurfaceHoverBrush}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource BorderHoverBrush}"/>
                      </DataTrigger>
                      <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                                   Value="True">
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource PrimaryBrush}"/>
                        <Setter Property="CornerRadius"
                                Value="{DynamicResource RadiusS}"/>
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </Border.Style>
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="20"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <Border Grid.Row="0"
                          Grid.Column="0"
                          Grid.RowSpan="2"
                          Width="80"
                          Height="45"
                          Background="{DynamicResource SurfaceSunkenBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          BorderThickness="{DynamicResource BorderThickness1}"
                          CornerRadius="{DynamicResource RadiusS}"
                          ClipToBounds="True">
                    <Border.Style>
                      <Style TargetType="Border">
                        <Setter Property="Background"
                                Value="{DynamicResource SurfaceSunkenBrush}"/>
                        <Style.Triggers>
                          <DataTrigger Binding="{Binding IsPortraitVideo}"
                                       Value="True">
                            <Setter Property="Background"
                                    Value="#FF000000"/>
                          </DataTrigger>
                        </Style.Triggers>
                      </Style>
                    </Border.Style>
                    <Grid>
                      <Image Source="{Binding VideoPreviewPath}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Visibility="{Binding VideoPreviewPath, Converter={StaticResource IsStringToVisibilityConverter}}">
                        <Image.Style>
                          <Style TargetType="Image">
                            <Setter Property="Stretch"
                                    Value="UniformToFill"/>
                            <Style.Triggers>
                              <DataTrigger Binding="{Binding IsPortraitVideo}"
                                           Value="True">
                                <Setter Property="Stretch"
                                        Value="Uniform"/>
                              </DataTrigger>
                            </Style.Triggers>
                          </Style>
                        </Image.Style>
                      </Image>
                      <TextBlock Text="{DynamicResource Upload.VideoPreview.Placeholder}"
                                 FontSize="{DynamicResource FontSizeXS}"
                                 Foreground="{DynamicResource TextMutedBrush}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Visibility="{Binding VideoPreviewPath, Converter={StaticResource IsStringToVisibilityConverter}, ConverterParameter=invert}"/>
                    </Grid>
                  </Border>

                  <TextBlock Grid.Row="0"
                             Grid.Column="2"
                             Text="{Binding DisplayName}"
                             FontWeight="{DynamicResource FontWeightSemiBold}"
                             FontSize="{DynamicResource FontSizeS}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             VerticalAlignment="Top"
                             TextTrimming="CharacterEllipsis"
                             Margin="0,0,8,0"/>

                  <Button Grid.Row="0"
                           Grid.Column="4"
                           Width="18"
                           Height="18"
                           Padding="0"
                           Background="Transparent"
                           BorderThickness="0"
                           Click="RemoveDraftButton_Click"
                           Tag="{Binding}"
                           Margin="0,-7,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Cursor="Hand"
                           ToolTip="{DynamicResource Common.Remove}">
                    <TextBlock Text="&#xe5cd;"
                               FontFamily="{DynamicResource MaterialIconsFont}"
                               FontSize="{DynamicResource FontSizeS}"
                               Foreground="{DynamicResource DangerBrush}"/>
                  </Button>

                  <StackPanel Grid.Row="1"
                              Grid.Column="2"
                              Margin="0,4,0,0"
                              Orientation="Horizontal"
                              VerticalAlignment="Top">
                    <TextBlock Style="{DynamicResource Control.Icon.S}"
                               Text="&#xe8b5;"
                               FontFamily="{DynamicResource MaterialIconsFont}"
                               FontSize="{DynamicResource FontSizeXS}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               VerticalAlignment="Center"
                               ToolTip="{DynamicResource Upload.List.Tooltip.Duration}"/>
                    <TextBlock Margin="6,0,0,0"
                               VerticalAlignment="Center">
                      <TextBlock.Style>
                        <Style TargetType="TextBlock"
                               BasedOn="{StaticResource Control.List.MetaText}">
                          <Setter Property="Text"
                                  Value="{Binding VideoDuration, TargetNullValue='--:--'}"/>
                          <Style.Triggers>
                            <DataTrigger Binding="{Binding VideoDuration}"
                                         Value="">
                              <Setter Property="Text"
                                      Value="--:--"/>
                            </DataTrigger>
                          </Style.Triggers>
                        </Style>
                      </TextBlock.Style>
                    </TextBlock>
                  </StackPanel>

                  <StackPanel Grid.Row="0"
                              Grid.Column="3"
                              Grid.RowSpan="2"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Margin="0">
                    <TextBlock x:Name="UploadStateIcon"
                               FontFamily="{DynamicResource MaterialIconsFont}"
                               FontSize="{DynamicResource FontSizeM}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"
                               Margin="0,0,0,5">
                      <TextBlock.RenderTransform>
                        <RotateTransform Angle="0"/>
                      </TextBlock.RenderTransform>
                      <TextBlock.Style>
                        <Style TargetType="TextBlock">
                          <Setter Property="Text"
                                  Value="&#xe14b;"/>
                          <Setter Property="Foreground"
                                  Value="{DynamicResource WarningBrush}"/>
                          <Setter Property="ToolTip"
                                  Value="{DynamicResource Upload.List.Tooltip.Upload.NotReady}"/>
                          <Style.Triggers>
                            <DataTrigger Binding="{Binding IsUploadReady}"
                                         Value="True">
                              <Setter Property="Text"
                                      Value="&#xe86c;"/>
                              <Setter Property="Foreground"
                                      Value="{DynamicResource SuccessBrush}"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Upload.Ready}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding UploadState}"
                                         Value="{x:Static models:UploadDraftUploadState.Uploading}">
                              <Setter Property="Text"
                                      Value="&#xe863;"/>
                              <Setter Property="Foreground"
                                      Value="{DynamicResource PrimaryBrush}"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Upload.Uploading}"/>
                              <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="UploadCardStateSpin">
                                  <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                     From="0"
                                                     To="360"
                                                     Duration="0:0:1"/>
                                  </Storyboard>
                                </BeginStoryboard>
                              </DataTrigger.EnterActions>
                              <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="UploadCardStateSpin"/>
                              </DataTrigger.ExitActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding UploadState}"
                                         Value="{x:Static models:UploadDraftUploadState.Failed}">
                              <Setter Property="Text"
                                      Value="&#xe000;"/>
                              <Setter Property="Foreground"
                                      Value="{DynamicResource DangerBrush}"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Upload.Failed}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding UploadState}"
                                         Value="{x:Static models:UploadDraftUploadState.Completed}">
                              <Setter Property="Text"
                                      Value="&#xe86c;"/>
                              <Setter Property="Foreground"
                                      Value="{DynamicResource SuccessBrush}"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Upload.Completed}"/>
                            </DataTrigger>
                          </Style.Triggers>
                        </Style>
                      </TextBlock.Style>
                    </TextBlock>

                    <TextBlock x:Name="TranscriptionStateIcon"
                               FontFamily="{DynamicResource MaterialIconsFont}"
                               FontSize="{DynamicResource FontSizeM}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"
                               Margin="0,0,0,5">
                      <TextBlock.RenderTransform>
                        <RotateTransform Angle="0"/>
                      </TextBlock.RenderTransform>
                      <TextBlock.Style>
                        <Style TargetType="TextBlock">
                          <Setter Property="Text"
                                  Value="&#xe8b5;"/>
                          <Setter Property="Foreground"
                                  Value="{DynamicResource TextMutedBrush}"/>
                          <Setter Property="ToolTip"
                                  Value="{DynamicResource Upload.List.Tooltip.Transcription.NotTranscribed}"/>
                          <Style.Triggers>
                            <DataTrigger Binding="{Binding TranscriptionState}"
                                         Value="{x:Static models:UploadDraftTranscriptionState.Completed}">
                              <Setter Property="Text"
                                      Value="&#xe86c;"/>
                              <Setter Property="Foreground"
                                      Value="{DynamicResource SuccessBrush}"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Transcription.Transcribed}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TranscriptionState}"
                                         Value="{x:Static models:UploadDraftTranscriptionState.Running}">
                              <Setter Property="Text"
                                      Value="&#xe863;"/>
                              <Setter Property="Foreground"
                                      Value="{DynamicResource PrimaryBrush}"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Transcription.Running}"/>
                              <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="TranscriptionCardStateSpin">
                                  <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                     From="0"
                                                     To="360"
                                                     Duration="0:0:1"/>
                                  </Storyboard>
                                </BeginStoryboard>
                              </DataTrigger.EnterActions>
                              <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="TranscriptionCardStateSpin"/>
                              </DataTrigger.ExitActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TranscriptionState}"
                                         Value="{x:Static models:UploadDraftTranscriptionState.Failed}">
                              <Setter Property="Text"
                                      Value="&#xe000;"/>
                              <Setter Property="Foreground"
                                      Value="{DynamicResource DangerBrush}"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Transcription.Failed}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TranscriptionState}"
                                         Value="{x:Static models:UploadDraftTranscriptionState.Cancelled}">
                              <Setter Property="Text"
                                      Value="&#xe5c9;"/>
                              <Setter Property="Foreground"
                                      Value="{DynamicResource TextMutedBrush}"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Transcription.Cancelled}"/>
                            </DataTrigger>
                          </Style.Triggers>
                        </Style>
                      </TextBlock.Style>
                    </TextBlock>

                    <TextBlock x:Name="OrientationIcon"
                               FontFamily="{DynamicResource MaterialIconsFont}"
                               FontSize="{DynamicResource FontSizeM}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                      <TextBlock.Style>
                        <Style TargetType="TextBlock">
                          <Setter Property="Text"
                                  Value="&#xe3f4;"/>
                          <Setter Property="Foreground"
                                  Value="{DynamicResource PrimaryBrush}"/>
                          <Setter Property="ToolTip"
                                  Value="{DynamicResource Upload.List.Tooltip.Orientation.Landscape}"/>
                          <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPortraitVideo}"
                                         Value="True">
                              <Setter Property="Text"
                                      Value="&#xe3f5;"/>
                              <Setter Property="ToolTip"
                                      Value="{DynamicResource Upload.List.Tooltip.Orientation.Portrait}"/>
                            </DataTrigger>
                          </Style.Triggers>
                        </Style>
                      </TextBlock.Style>
                    </TextBlock>
                  </StackPanel>
                </Grid>
              </Border>
            </DataTemplate>
          </ListBox.ItemTemplate>
          </ListBox>
          </Border>
        </Grid>

        <ScrollViewer x:Name="UploadContentScrollViewer"
                      Grid.Column="2"
                      Margin="12,8,8,0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalAlignment="Stretch"
                      Padding="0,0,12,0">
          <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="{DynamicResource SpacingS}"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>

          <Grid x:Name="EmptyContentPanel"
                Grid.Row="0"
                Grid.RowSpan="4"
                Background="Transparent"
                Height="{Binding ElementName=UploadContentScrollViewer, Path=ActualHeight}"
                MinHeight="{DynamicResource DetailPanelMinHeight}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AllowDrop="True"
                DragOver="VideoDrop_DragOver"
                DragLeave="VideoDrop_DragLeave"
                Drop="VideoDrop_Drop"
                MouseLeftButtonDown="VideoDropZone_Click">
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
              </Grid.RowDefinitions>
              <StackPanel Grid.Row="1"
                          HorizontalAlignment="Center"
                          Margin="32">
                <TextBlock Style="{DynamicResource Control.Icon.Base}"
                           Text="&#xe070;"
                           FontSize="{DynamicResource FontSizeXXXXL}"
                           Foreground="{DynamicResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           Margin="{DynamicResource LabelMarginBottomXL}"/>
                <TextBlock Text="{DynamicResource Upload.Empty.Title}"
                           FontSize="{DynamicResource FontSizeXXL}"
                           FontWeight="{DynamicResource FontWeightSemiBold}"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{DynamicResource Upload.Empty.Formats}"
                           FontSize="{DynamicResource FontSizeM}"
                           Foreground="{DynamicResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           Margin="{DynamicResource LabelMarginTopL}"/>
              </StackPanel>
            </Grid>
          </Grid>

          <ContentControl x:Name="VideoDropZone"
                          Grid.Row="0"
                          Style="{DynamicResource Control.DropZone.Video}"
                          Background="{DynamicResource SurfaceElevatedBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          BorderThickness="{DynamicResource BorderThickness1}"
                          Visibility="Collapsed"
                          DragOver="VideoDrop_DragOver"
                          DragLeave="VideoDrop_DragLeave"
                          Drop="VideoDrop_Drop"
                          MouseLeftButtonDown="VideoDropZone_Click">

      <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <!-- Video ausgewaehlt -->
          <Grid x:Name="VideoDropSelectedState"
                Grid.Row="0"
                Visibility="Collapsed">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Video Preview -->
            <Border Grid.Column="0"
                    Width="{Binding ElementName=VideoInfoPanel, Path=ActualHeight, Converter={StaticResource HeightToWidth16x9}}"
                    Height="{Binding ElementName=VideoInfoPanel, Path=ActualHeight}"
                    MinWidth="160"
                    MinHeight="90"
                    CornerRadius="{DynamicResource RadiusM}"
                    Background="{DynamicResource SurfaceLightBrush}"
                    BorderBrush="{DynamicResource BorderStrongBrush}"
                    BorderThickness="0.5"
                    Margin="8,8,8,8"
                    VerticalAlignment="Top"
                    ClipToBounds="True">
              <Grid>
                <Grid x:Name="VideoPreviewEmptyState">
                  <TextBlock Style="{DynamicResource Control.Icon.XXL}"
                             Text="&#xe53f;"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0"/>
                </Grid>
                <Image x:Name="VideoPreviewImage"
                       Stretch="UniformToFill"
                       Visibility="Collapsed"/>
              </Grid>
            </Border>

            <!-- Video Info -->
            <Grid x:Name="VideoInfoPanel"
                  Grid.Column="1"
                  VerticalAlignment="Top"
                  Margin="0,8,0,8">
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{DynamicResource SpacingM}"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                <TextBlock x:Name="VideoFileNameTextBlock"
                             FontSize="{DynamicResource FontSizeL}"
                             FontWeight="{DynamicResource FontWeightSemiBold}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             TextTrimming="CharacterEllipsis"/>
                  <Border Background="{DynamicResource SurfaceSunkenBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          BorderThickness="{DynamicResource BorderThickness1}"
                          CornerRadius="{DynamicResource RadiusS}"
                          Margin="10,0,0,0"
                          Padding="{DynamicResource PaddingCompact}"
                          VerticalAlignment="Center">
                    <TextBlock x:Name="VideoFileSizeTextBlock"
                               Text="{DynamicResource Upload.VideoFileSize.Unknown}"
                               FontSize="{DynamicResource FontSizeXS}"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                  </Border>
                </StackPanel>
              </Grid>

              <Border Grid.Row="2"
                      Background="{DynamicResource SurfaceSunkenBrush}"
                      BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="{DynamicResource BorderThickness1}"
                      CornerRadius="{DynamicResource RadiusS}"
                      Padding="10">
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="{DynamicResource SpacingS}"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>

                  <StackPanel Grid.Row="0"
                              Grid.Column="0"
                              Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Upload.VideoInfo.Resolution}"
                               FontSize="{DynamicResource FontSizeXS}"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                    <TextBlock x:Name="VideoResolutionTextBlock"
                               FontSize="{DynamicResource FontSizeM}"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                  </StackPanel>
                  <StackPanel Grid.Row="0"
                              Grid.Column="1"
                              Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Upload.VideoInfo.Fps}"
                               FontSize="{DynamicResource FontSizeXS}"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                    <TextBlock x:Name="VideoFpsTextBlock"
                               FontSize="{DynamicResource FontSizeM}"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                  </StackPanel>
                  <StackPanel Grid.Row="0"
                              Grid.Column="2"
                              Margin="0,0,12,0">
                    <TextBlock Text="{DynamicResource Upload.VideoInfo.Duration}"
                               FontSize="{DynamicResource FontSizeXS}"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                    <TextBlock x:Name="VideoDurationTextBlock"
                               FontSize="{DynamicResource FontSizeM}"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                  </StackPanel>
                  <StackPanel Grid.Row="0"
                              Grid.Column="3">
                    <TextBlock Text="{DynamicResource Upload.VideoInfo.VideoCodec}"
                               FontSize="{DynamicResource FontSizeXS}"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                    <TextBlock x:Name="VideoCodecTextBlock"
