<Application x:Class="DCM.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Localization -->
        <ResourceDictionary Source="Localization/Strings.xaml"/>
        <!-- Theme resources in correct order -->
        <ResourceDictionary Source="Themes/DarkTheme.Visual.xaml"/>
        <ResourceDictionary Source="Themes/DarkTheme.Layout.xaml"/>
        <ResourceDictionary Source="Themes/DarkTheme.Controls.xaml"/>
        <ResourceDictionary Source="Themes/DarkTheme.Effects.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
