<UserControl x:Class="DCM.App.Views.ClipperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:DCM.Core.Models;assembly=DCM.Core"
             xmlns:models="clr-namespace:DCM.App.Models"
             xmlns:ap="clr-namespace:DCM.App.Infrastructure.AttachedProperties">
  <Grid Margin="{DynamicResource ViewRootMargin}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="{DynamicResource SpacingM}"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="280"/>
      <ColumnDefinition Width="{DynamicResource SpacingM}"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition x:Name="EditorSplitterColumn" Width="0"/>
      <ColumnDefinition x:Name="EditorColumn" Width="0" MinWidth="0"/>
    </Grid.ColumnDefinitions>

    <Border x:Name="ClipperStatusPanel"
            Grid.Row="0"
            Grid.ColumnSpan="5"
            Style="{DynamicResource Control.Container.SurfaceCard}"
            Padding="12"
            Visibility="Collapsed">
      <Border x:Name="RenderResultsPanel"
              Background="{DynamicResource SurfaceElevatedBrush}"
              CornerRadius="{DynamicResource RadiusM}"
              Padding="10"
              Visibility="Collapsed">
        <StackPanel>
          <TextBlock Text="{DynamicResource Clipper.Results.Title}"
                     FontWeight="SemiBold"
                     FontSize="{DynamicResource FontSizeS}"
                     Foreground="{DynamicResource TextPrimaryBrush}"/>
          <TextBlock x:Name="RenderResultsSummaryText"
                     FontSize="{DynamicResource FontSizeXS}"
                     Foreground="{DynamicResource TextMutedBrush}"
                     Margin="0,4,0,0"/>
          <StackPanel x:Name="RenderResultsListPanel"
                      Margin="0,8,0,0"/>
        </StackPanel>
      </Border>
    </Border>

    <!-- Left Panel: Draft Selection -->
    <Grid Grid.Row="2"
          Grid.Column="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="{DynamicResource SpacingM}"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0"
                 Text="{DynamicResource Clipper.SelectDraft}"
                 Style="{DynamicResource Control.Text.SectionHeader}"/>

      <Border Grid.Row="2"
              Style="{DynamicResource Control.Container.SurfaceCard}">
        <ListBox x:Name="DraftListBox"
                 SelectionChanged="DraftListBox_SelectionChanged"
                 Background="Transparent"
                 BorderThickness="0"
                 UseLayoutRounding="True"
                 SnapsToDevicePixels="True"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
          <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
              <Setter Property="Margin"
                      Value="0,0,0,6"/>
              <Setter Property="Padding"
                      Value="0"/>
              <Setter Property="HorizontalContentAlignment"
                      Value="Stretch"/>
              <Setter Property="Background"
                      Value="Transparent"/>
              <Setter Property="BorderThickness"
                      Value="0"/>
              <Setter Property="FocusVisualStyle"
                      Value="{x:Null}"/>
              <Setter Property="SnapsToDevicePixels"
                      Value="True"/>
              <Setter Property="UseLayoutRounding"
                      Value="True"/>
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                      <ContentPresenter Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
            </Style>
          </ListBox.ItemContainerStyle>
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Border Padding="8,7,6,7"
                      Margin="8,6,8,0"
                      SnapsToDevicePixels="True"
                      UseLayoutRounding="True">
                <Border.Style>
                  <Style TargetType="Border">
                    <Setter Property="Background"
                            Value="{DynamicResource SurfaceElevatedBrush}"/>
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource BorderBrush}"/>
                    <Setter Property="BorderThickness"
                            Value="1"/>
                    <Setter Property="CornerRadius"
                            Value="{DynamicResource RadiusS}"/>
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}"
                                   Value="True">
                        <Setter Property="Background"
                                Value="{DynamicResource SurfaceHoverBrush}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource BorderHoverBrush}"/>
                      </DataTrigger>
                      <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                                   Value="True">
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource PrimaryBrush}"/>
                        <Setter Property="CornerRadius"
                                Value="{DynamicResource RadiusS}"/>
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </Border.Style>
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="72"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <Border Grid.Column="0"
                          Grid.RowSpan="2"
                          Width="{DynamicResource ThumbnailSizeM}"
                          Height="{DynamicResource ThumbnailSizeM}"
                          Background="{DynamicResource SurfaceSunkenBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          BorderThickness="{DynamicResource BorderThickness1}"
                          CornerRadius="{DynamicResource RadiusS}"
                          ClipToBounds="True">
                    <Grid>
                      <Image Source="{Binding Draft.VideoPreviewPath}"
                             Stretch="UniformToFill"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Visibility="{Binding Draft.VideoPreviewPath, Converter={StaticResource IsStringToVisibilityConverter}}"/>
                      <TextBlock Text="{DynamicResource Upload.VideoPreview.Placeholder}"
                                 FontSize="{DynamicResource FontSizeXS}"
                                 Foreground="{DynamicResource TextMutedBrush}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 TextAlignment="Center"
                                 Visibility="{Binding Draft.VideoPreviewPath, Converter={StaticResource IsStringToVisibilityConverter}, ConverterParameter=invert}"/>
                    </Grid>
                  </Border>

                  <TextBlock Grid.Column="2"
                             Text="{Binding Title}"
                             FontWeight="{DynamicResource FontWeightSemiBold}"
                             FontSize="{DynamicResource FontSizeS}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             TextTrimming="CharacterEllipsis"
                             Margin="4,0,8,0"/>

                  <StackPanel Grid.Row="1"
                              Grid.Column="2"
                              Margin="0,4,0,0"
                              VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                      <Border Style="{DynamicResource Control.List.MetaBadge}">
                        <TextBlock x:Name="ClipperUploadStateIcon">
                          <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource Control.List.MetaIcon}">
                              <Setter Property="FontFamily" Value="{DynamicResource MaterialIconsFont}"/>
                              <Setter Property="Text" Value="&#xe14b;"/>
                              <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                              <Setter Property="ToolTip" Value="{DynamicResource Upload.List.Tooltip.Upload.NotReady}"/>
                              <Style.Triggers>
                                <DataTrigger Binding="{Binding Draft.IsUploadReady}" Value="True">
                                  <Setter Property="Text" Value="&#xe86c;"/>
                                  <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                  <Setter Property="ToolTip" Value="{DynamicResource Upload.List.Tooltip.Upload.Ready}"/>
                                </DataTrigger>
                              </Style.Triggers>
                            </Style>
                          </TextBlock.Style>
                        </TextBlock>
                      </Border>

                      <Border Style="{DynamicResource Control.List.MetaBadge}">
                        <TextBlock x:Name="ClipperTranscriptionStateIcon">
                          <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource Control.List.MetaIcon}">
                              <Setter Property="FontFamily" Value="{DynamicResource MaterialIconsFont}"/>
                              <Setter Property="Text" Value="&#xe8b5;"/>
                              <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
                              <Setter Property="ToolTip" Value="{DynamicResource Upload.List.Tooltip.Transcription.NotTranscribed}"/>
                              <Style.Triggers>
                                <DataTrigger Binding="{Binding HasTranscript}" Value="True">
                                  <Setter Property="Text" Value="&#xe86c;"/>
                                  <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                  <Setter Property="ToolTip" Value="{DynamicResource Upload.List.Tooltip.Transcription.Transcribed}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Draft.TranscriptionState}" Value="{x:Static models:UploadDraftTranscriptionState.Completed}">
                                  <Setter Property="Text" Value="&#xe86c;"/>
                                  <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                  <Setter Property="ToolTip" Value="{DynamicResource Upload.List.Tooltip.Transcription.Transcribed}"/>
                                </DataTrigger>
                              </Style.Triggers>
                            </Style>
                          </TextBlock.Style>
                        </TextBlock>
                      </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                      <Border Style="{DynamicResource Control.List.MetaBadge}">
                        <TextBlock x:Name="ClipperOrientationIcon">
                          <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource Control.List.MetaIcon}">
                              <Setter Property="FontFamily" Value="{DynamicResource MaterialIconsFont}"/>
                              <Setter Property="Text" Value="&#xe3f4;"/>
                              <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                              <Setter Property="ToolTip" Value="{DynamicResource Upload.List.Tooltip.Orientation.Landscape}"/>
                              <Style.Triggers>
                                <DataTrigger Binding="{Binding Draft.IsPortraitVideo}" Value="True">
                                  <Setter Property="Text" Value="&#xe3f5;"/>
                                  <Setter Property="ToolTip" Value="{DynamicResource Upload.List.Tooltip.Orientation.Portrait}"/>
                                </DataTrigger>
                              </Style.Triggers>
                            </Style>
                          </TextBlock.Style>
                        </TextBlock>
                      </Border>

                      <Border Style="{DynamicResource Control.List.MetaBadge}">
                        <StackPanel Orientation="Horizontal">
                          <TextBlock Style="{DynamicResource Control.List.MetaIcon}"
                                     Text="&#xe8b5;"
                                     Foreground="{DynamicResource TextMutedBrush}"
                                     ToolTip="{DynamicResource Upload.List.Tooltip.Duration}"/>
                          <TextBlock>
                            <TextBlock.Style>
                              <Style TargetType="TextBlock" BasedOn="{StaticResource Control.List.MetaText}">
                                <Setter Property="Text" Value="{Binding VideoDuration, TargetNullValue='--:--'}"/>
                                <Style.Triggers>
                                  <DataTrigger Binding="{Binding VideoDuration}" Value="">
                                    <Setter Property="Text" Value="--:--"/>
                                  </DataTrigger>
                                </Style.Triggers>
                              </Style>
                            </TextBlock.Style>
                          </TextBlock>
                        </StackPanel>
                      </Border>
                    </StackPanel>
                  </StackPanel>
                </Grid>
              </Border>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </Border>
    </Grid>

    <GridSplitter x:Name="EditorGridSplitter"
                  Grid.Row="2"
                  Grid.Column="3"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ResizeBehavior="PreviousAndNext"
                  ShowsPreview="True"
                  Background="{DynamicResource BorderBrush}"
                  Visibility="Collapsed"/>

    <!-- Right Panel: Candidates -->
    <Grid x:Name="OverviewPanel"
          Grid.Row="2"
          Grid.Column="2">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="{DynamicResource SpacingM}"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0"
                 Text="{DynamicResource Clipper.Candidates}"
                 Style="{DynamicResource Control.Text.SectionHeader}"/>

      <Border Grid.Row="2"
              Style="{DynamicResource Control.Container.SurfaceCard}">
        <Grid>
          <!-- Empty State -->
          <StackPanel x:Name="EmptyStatePanel"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Visibility="Visible">
            <TextBlock Style="{DynamicResource Control.Icon.64}"
                       Text="&#xe04a;"
                       Foreground="{DynamicResource TextMutedBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{DynamicResource Clipper.EmptyState.Title}"
                       FontSize="{DynamicResource FontSizeL}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
            <TextBlock Text="{DynamicResource Clipper.EmptyState.Description}"
                       FontSize="{DynamicResource FontSizeS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="400"
                       Margin="0,8,0,0"/>
          </StackPanel>

          <!-- Candidates List -->
          <ListBox x:Name="CandidatesListBox"
                   Visibility="Collapsed"
                   Background="Transparent"
                   BorderThickness="0"
                   HorizontalContentAlignment="Stretch"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                   SelectionMode="Single">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Border Padding="12"
                        Margin="0,0,0,8"
                        Background="{DynamicResource SurfaceElevatedBrush}"
                        CornerRadius="{DynamicResource RadiusM}">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="{DynamicResource SpacingM}"/>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsSelected}"
                              PreviewMouseDown="CandidateSelectionCheckBox_PreviewMouseDown"
                              Checked="CandidateSelectionCheckBox_Changed"
                              Unchecked="CandidateSelectionCheckBox_Changed"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2">
                      <TextBlock Text="{Binding PreviewText}"
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 TextWrapping="Wrap"/>
                      <WrapPanel Margin="0,8,0,0">
                        <TextBlock Text="{Binding StartFormatted}"
                                   FontSize="{DynamicResource FontSizeXS}"
                                   Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBlock Text=" - "
                                   FontSize="{DynamicResource FontSizeXS}"
                                   Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBlock Text="{Binding EndFormatted}"
                                   FontSize="{DynamicResource FontSizeXS}"
                                   Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBlock Text=" ("
                                   FontSize="{DynamicResource FontSizeXS}"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   Margin="8,0,0,0"/>
                        <TextBlock Text="{Binding DurationFormatted}"
                                   FontSize="{DynamicResource FontSizeXS}"
                                   Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBlock Text=")"
                                   FontSize="{DynamicResource FontSizeXS}"
                                   Foreground="{DynamicResource TextMutedBrush}"/>
                      </WrapPanel>
                      <TextBlock Text="{Binding Reason}"
                                 FontSize="{DynamicResource FontSizeXS}"
                                 Foreground="{DynamicResource TextMutedBrush}"
                                 TextWrapping="Wrap"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="3"
                            VerticalAlignment="Center">
                      <StackPanel>
                        <Border Background="{DynamicResource PrimaryBrush}"
                                CornerRadius="{DynamicResource RadiusS}"
                                Padding="8,4"
                                HorizontalAlignment="Right">
                          <TextBlock Text="{Binding Score, StringFormat={}{0:F1}}"
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Border>
                        <Button Content="{DynamicResource Clipper.Actions.EditCandidate}"
                                Style="{DynamicResource Control.Button.Tertiary}"
                                ap:ButtonIcon.Glyph="&#xe3c9;"
                                Margin="0,8,0,0"
                                Padding="10,4"
                                Tag="{Binding}"
                                Click="CandidateSettingsButton_Click"/>
                      </StackPanel>
                    </Border>
                  </Grid>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>

          <!-- Loading State -->
          <StackPanel x:Name="LoadingPanel"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Visibility="Collapsed">
            <ProgressBar x:Name="AnalysisProgressBar"
                         IsIndeterminate="True"
                         Width="200"
                         Height="4"/>
            <TextBlock x:Name="LoadingStatusText"
                       Text="{DynamicResource Clipper.Loading}"
                       FontSize="{DynamicResource FontSizeS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
            <TextBlock x:Name="AnalysisProgressText"
                       Text="0%"
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
            <TextBlock x:Name="AnalysisEtaText"
                       Text=""
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,2,0,0"
                       Visibility="Collapsed"/>
          </StackPanel>
        </Grid>
      </Border>
    </Grid>

    <!-- Right Panel: Candidate Editor -->
    <Grid x:Name="EditorPanel"
          Grid.Row="2"
          Grid.Column="2"
          Grid.ColumnSpan="3"
          Visibility="Collapsed">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="{DynamicResource SpacingM}"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Border Grid.Row="0"
              Style="{DynamicResource Control.Container.SurfaceCard}"
              Padding="12">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="{DynamicResource SpacingM}"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <Button Grid.Column="0"
                  Content="{DynamicResource Clipper.Actions.BackToOverview}"
                  Style="{DynamicResource Control.Button.Tertiary}"
                  ap:ButtonIcon.Glyph="&#xe5c4;"
                  Click="BackToOverviewButton_Click"/>

          <StackPanel Grid.Column="2"
                      VerticalAlignment="Center">
            <TextBlock x:Name="EditorCandidateTitleText"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="EditorCandidateTimeText"
                       Margin="0,3,0,0"
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"/>
          </StackPanel>
        </Grid>
      </Border>

      <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="360" MinWidth="300"/>
          <ColumnDefinition Width="{DynamicResource SpacingM}"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Style="{DynamicResource Control.Container.SurfaceCard}"
                Padding="12">
          <ScrollViewer VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
            <TextBlock Text="{DynamicResource Clipper.Settings}"
                       FontWeight="SemiBold"
                       FontSize="{DynamicResource FontSizeS}"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Text="{DynamicResource Clipper.Settings.ApplyHint}"
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="0,4,0,0"/>

            <Separator Margin="0,14,0,12"/>

            <TextBlock Text="{DynamicResource Clipper.Settings.Subtitles}"
                       FontSize="{DynamicResource FontSizeXS}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <CheckBox x:Name="EnableSubtitlesCheckBox"
                      Content="{DynamicResource Clipper.Settings.EnableSubtitles}"
                      Margin="0,8,0,0"/>
            <CheckBox x:Name="WordHighlightCheckBox"
                      Content="{DynamicResource Clipper.Settings.WordHighlight}"
                      Margin="0,6,0,0"/>

            <TextBlock Text="{DynamicResource Clipper.Settings.FontSize}"
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="0,12,0,6"/>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Slider x:Name="SubtitleFontSizeSlider"
                      Grid.Column="0"
                      Style="{DynamicResource Control.Slider.Clipper.Settings}"
                      Minimum="48"
                      Maximum="300"
                      Value="96"
                      TickFrequency="4"
                      IsSnapToTickEnabled="False"/>
              <TextBlock x:Name="SubtitleFontSizeValueText"
                         Grid.Column="1"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="{DynamicResource FontSizeXS}"
                         Foreground="{DynamicResource TextMutedBrush}"
                         Text="72"/>
            </Grid>

            <TextBlock Text="{DynamicResource Clipper.Settings.PositionX}"
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="0,12,0,6"/>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Slider x:Name="SubtitlePositionXSlider"
                      Grid.Column="0"
                      Style="{DynamicResource Control.Slider.Clipper.Settings}"
                      Minimum="0"
                      Maximum="1"
                      Value="0.5"
                      TickFrequency="0.01"
                      IsSnapToTickEnabled="False"/>
              <TextBlock x:Name="SubtitlePositionXValueText"
                         Grid.Column="1"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="{DynamicResource FontSizeXS}"
                         Foreground="{DynamicResource TextMutedBrush}"
                         Text="0.50"/>
            </Grid>

            <TextBlock Text="{DynamicResource Clipper.Settings.PositionY}"
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="0,12,0,6"/>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Slider x:Name="SubtitlePositionYSlider"
                      Grid.Column="0"
                      Style="{DynamicResource Control.Slider.Clipper.Settings}"
                      Minimum="0"
                      Maximum="1"
                      Value="0.7"
                      TickFrequency="0.01"
                      IsSnapToTickEnabled="False"/>
              <TextBlock x:Name="SubtitlePositionYValueText"
                         Grid.Column="1"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="{DynamicResource FontSizeXS}"
                         Foreground="{DynamicResource TextMutedBrush}"
                         Text="0.70"/>
            </Grid>

            <TextBlock Text="{DynamicResource Clipper.Settings.Presets}"
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="0,12,0,6"/>
            <UniformGrid Columns="4">
              <Button Content="{DynamicResource Clipper.Settings.Preset.Top}"
                      Style="{DynamicResource Control.Button.Tertiary}"
                      Margin="0,0,6,0"
                      Click="SubtitlePresetTopButton_Click"/>
              <Button Content="{DynamicResource Clipper.Settings.Preset.Middle}"
                      Style="{DynamicResource Control.Button.Tertiary}"
                      Margin="0,0,6,0"
                      Click="SubtitlePresetMiddleButton_Click"/>
              <Button Content="{DynamicResource Clipper.Settings.Preset.Bottom}"
                      Style="{DynamicResource Control.Button.Tertiary}"
                      Margin="0,0,6,0"
                      Click="SubtitlePresetBottomButton_Click"/>
              <Button Content="{DynamicResource Clipper.Settings.Preset.Reset}"
                      Style="{DynamicResource Control.Button.Tertiary}"
                      Click="SubtitlePresetResetButton_Click"/>
            </UniformGrid>

            <Separator Margin="0,14,0,12"/>

            <!-- Logo Section -->
            <TextBlock Text="{DynamicResource Clipper.Settings.Logo}"
                       FontSize="{DynamicResource FontSizeXS}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <Grid Margin="0,8,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <TextBlock x:Name="LogoPathText"
                         Grid.Column="0"
                         Text="{DynamicResource Clipper.Settings.NoLogo}"
                         FontSize="{DynamicResource FontSizeXS}"
                         Foreground="{DynamicResource TextMutedBrush}"
                         VerticalAlignment="Center"
                         TextTrimming="CharacterEllipsis"/>
              <Button Grid.Column="1"
                      Content="{DynamicResource Clipper.Settings.SelectLogo}"
                      Style="{DynamicResource Control.Button.Tertiary}"
                      ap:ButtonIcon.Glyph="&#xe2c6;"
                      Margin="8,0,0,0"
                      Padding="10,4"
                      Click="SelectLogoButton_Click"/>
              <Button x:Name="ClearLogoButton"
                      Grid.Column="2"
                      Style="{DynamicResource Control.Button.Tertiary}"
                      Margin="4,0,0,0"
                      Padding="6,4"
                      Visibility="Collapsed"
                      Click="ClearLogoButton_Click">
                <TextBlock Style="{DynamicResource Control.Icon.S}"
                           Text="&#xe5cd;"/>
              </Button>
            </Grid>

            <!-- Logo Scale Slider -->
            <TextBlock x:Name="LogoScaleLabel"
                       Text="{DynamicResource Clipper.Settings.LogoScale}"
                       FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="0,12,0,6"
                       Visibility="Collapsed"/>
            <Grid x:Name="LogoScalePanel" Visibility="Collapsed">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Slider x:Name="LogoScaleSlider"
                      Grid.Column="0"
                      Style="{DynamicResource Control.Slider.Clipper.Settings}"
                      Minimum="0.05"
                      Maximum="0.4"
                      Value="0.15"
                      TickFrequency="0.01"
                      IsSnapToTickEnabled="False"
                      ValueChanged="LogoScaleSlider_ValueChanged"/>
              <TextBlock x:Name="LogoScaleValueText"
                         Grid.Column="1"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="{DynamicResource FontSizeXS}"
                         Foreground="{DynamicResource TextMutedBrush}"
                         Text="15%"/>
            </Grid>

            <TextBlock FontSize="{DynamicResource FontSizeXS}"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="0,4,0,0"
                       Text="{DynamicResource Clipper.Settings.LogoDragHint}"
                       TextWrapping="Wrap"
                       x:Name="LogoDragHintText"
                       Visibility="Collapsed"/>
            </StackPanel>
          </ScrollViewer>
        </Border>

        <Border Grid.Column="2"
                Style="{DynamicResource Control.Container.SurfaceCard}">
          <Grid>
            <!-- Video Player -->
            <Grid x:Name="VideoPlayerPanel"
                  Visibility="Collapsed">
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <!-- Preview Container -->
              <Grid Grid.Row="0">
                <Grid x:Name="StandardPreviewPanel" HorizontalAlignment="Center">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>

                  <!-- Container with 9:16 aspect ratio -->
                  <Border x:Name="PortraitPreviewBorder"
                          Background="Black"
                          CornerRadius="{DynamicResource RadiusM}"
                          MaxWidth="360"
                          ClipToBounds="True">
                    <Grid x:Name="PortraitPreviewContentRoot"
                          SizeChanged="RoundedPreviewContentRoot_SizeChanged">
                      <!-- Viewbox for 9:16 aspect ratio -->
                      <Viewbox Stretch="Uniform" StretchDirection="Both">
                        <Border Width="1080" Height="1920" Background="Black">
                          <Grid>
                            <!-- Portrait Preview Frame (shown when paused) -->
                            <Image x:Name="CroppedPreviewImage"
                                   Stretch="Uniform"/>

                            <!-- Video Playback (shown during play) -->
                            <MediaElement x:Name="PreviewMediaElement"
                                          LoadedBehavior="Manual"
                                          UnloadedBehavior="Stop"
                                          ScrubbingEnabled="True"
                                          Stretch="UniformToFill"
                                          Visibility="Collapsed"
                                          MediaOpened="PreviewMediaElement_MediaOpened"
                                          MediaEnded="PreviewMediaElement_MediaEnded"/>

                            <!-- Subtitle Overlay -->
                            <Canvas x:Name="SubtitleOverlayCanvas"
                                    Background="Transparent"
                                    SizeChanged="SubtitleOverlayCanvas_SizeChanged"
                                    MouseLeftButtonDown="SubtitleOverlayCanvas_MouseLeftButtonDown"
                                    MouseMove="SubtitleOverlayCanvas_MouseMove"
                                    MouseLeftButtonUp="SubtitleOverlayCanvas_MouseLeftButtonUp">
                              <Border x:Name="SubtitlePlacementPreview"
                                      Background="{DynamicResource Brush.Overlay.Scrim}"
                                      BorderBrush="{DynamicResource Brush.Overlay.ContrastBorder}"
                                      BorderThickness="1"
                                      Padding="8,4"
                                      CornerRadius="4"
                                      Cursor="SizeAll"
                                      Canvas.Left="0"
                                      Canvas.Top="0">
                                <TextBlock Text="Aa"
                                           FontSize="22"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                              </Border>
                            </Canvas>

                            <!-- Logo Overlay (draggable, on top of subtitle) -->
                            <Canvas x:Name="LogoOverlayCanvas"
                                    Background="{x:Null}"
                                    SizeChanged="LogoOverlayCanvas_SizeChanged"
                                    Visibility="Collapsed">
                              <Image x:Name="LogoOverlayImage"
                                     Stretch="Uniform"
                                     Width="162"
                                     Height="162"
                                     Cursor="SizeAll"
                                     Canvas.Left="0"
                                     Canvas.Top="0"
                                     MouseLeftButtonDown="LogoOverlay_MouseLeftButtonDown"
                                     MouseMove="LogoOverlay_MouseMove"
                                     MouseLeftButtonUp="LogoOverlay_MouseLeftButtonUp"/>
                            </Canvas>
                          </Grid>
                        </Border>
                      </Viewbox>
                    </Grid>
                  </Border>

                  <!-- Fallback frame image (not used anymore, kept for compatibility) -->
                  <Image x:Name="PreviewFrameImage"
                         Visibility="Collapsed"
                         Stretch="Uniform"
                         IsHitTestVisible="False"/>
                </Grid>

                <Grid x:Name="SplitWorkbenchPanel" Visibility="Collapsed">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="{DynamicResource SpacingM}"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>

                  <StackPanel Grid.Column="0">
                    <TextBlock Text="{DynamicResource Clipper.Split.Workbench.Portrait}"
                               FontSize="{DynamicResource FontSizeS}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="{DynamicResource Clipper.Split.Workbench.PortraitHint}"
                               FontSize="{DynamicResource FontSizeXS}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Margin="0,0,0,8"/>
                    <Border x:Name="SplitPortraitPreviewBorder"
                            Width="260"
                            Height="462"
                            Background="Black"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="2"
                            CornerRadius="{DynamicResource RadiusM}"
                            ClipToBounds="True">
                        <Grid x:Name="SplitPortraitContentRoot"
                              Background="Black"
                              SizeChanged="RoundedPreviewContentRoot_SizeChanged">
                          <Image x:Name="SplitPortraitSingleImage"
                                 Stretch="UniformToFill"/>
                        <Grid x:Name="SplitPortraitDuoGrid" Visibility="Collapsed">
                          <Grid.RowDefinitions>
                            <RowDefinition x:Name="SplitPortraitTopRow" Height="*"/>
                            <RowDefinition x:Name="SplitPortraitBottomRow" Height="*"/>
                          </Grid.RowDefinitions>
                          <Image x:Name="SplitPortraitTopImage"
                                 Grid.Row="0"
                                 Stretch="UniformToFill"/>
                          <Image x:Name="SplitPortraitBottomImage"
                                 Grid.Row="1"
                                 Stretch="UniformToFill"/>
                        </Grid>
                        <Image x:Name="SplitPlaybackImage"
                               Stretch="UniformToFill"
                               Visibility="Collapsed"/>
                        <Grid x:Name="SplitLivePlaybackPanel"
                              Visibility="Collapsed"
                              IsHitTestVisible="False">
                          <Border x:Name="SplitLiveSingleHost"
                                  Visibility="Collapsed">
                            <Border.Background>
                              <VisualBrush x:Name="SplitLiveSingleBrush"
                                           Visual="{Binding ElementName=SplitSourceMediaElement}"
                                           Stretch="UniformToFill"
                                           AlignmentX="Center"
                                           AlignmentY="Center"
                                           ViewboxUnits="RelativeToBoundingBox"
                                           Viewbox="0,0,1,1"/>
                            </Border.Background>
                          </Border>
                          <Grid x:Name="SplitLiveDuoGrid"
                                Visibility="Collapsed">
                            <Grid.RowDefinitions>
                              <RowDefinition x:Name="SplitLiveTopRow" Height="*"/>
                              <RowDefinition x:Name="SplitLiveBottomRow" Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0">
                              <Border.Background>
                                <VisualBrush x:Name="SplitLiveTopBrush"
                                             Visual="{Binding ElementName=SplitSourceMediaElement}"
                                             Stretch="UniformToFill"
                                             AlignmentX="Center"
                                             AlignmentY="Center"
                                             ViewboxUnits="RelativeToBoundingBox"
                                             Viewbox="0,0,1,0.5"/>
                              </Border.Background>
                            </Border>
                            <Border Grid.Row="1">
                              <Border.Background>
                                <VisualBrush x:Name="SplitLiveBottomBrush"
                                             Visual="{Binding ElementName=SplitSourceMediaElement}"
                                             Stretch="UniformToFill"
                                             AlignmentX="Center"
                                             AlignmentY="Center"
                                             ViewboxUnits="RelativeToBoundingBox"
                                             Viewbox="0,0.5,1,0.5"/>
                              </Border.Background>
                            </Border>
                          </Grid>
                        </Grid>
                        <Canvas x:Name="SplitSubtitleOverlayCanvas"
                                Background="{x:Null}"
                                SizeChanged="SubtitleOverlayCanvas_SizeChanged"
                                MouseLeftButtonDown="SubtitleOverlayCanvas_MouseLeftButtonDown"
                                MouseMove="SubtitleOverlayCanvas_MouseMove"
                                MouseLeftButtonUp="SubtitleOverlayCanvas_MouseLeftButtonUp">
                          <Border x:Name="SplitSubtitlePlacementPreview"
                                  Background="{DynamicResource Brush.Overlay.Scrim}"
                                  BorderBrush="{DynamicResource Brush.Overlay.ContrastBorder}"
                                  BorderThickness="1"
                                  Padding="8,4"
                                  CornerRadius="4"
                                  Cursor="SizeAll"
                                  Canvas.Left="0"
                                  Canvas.Top="0">
                            <TextBlock Text="Aa"
                                       FontSize="22"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                          </Border>
                        </Canvas>
                        <Canvas x:Name="SplitLogoOverlayCanvas"
                                Background="{x:Null}"
                                SizeChanged="LogoOverlayCanvas_SizeChanged"
                                Visibility="Collapsed">
                          <Image x:Name="SplitLogoOverlayImage"
                                 Stretch="Uniform"
                                 Width="162"
                                 Height="162"
                                 Cursor="SizeAll"
                                 Canvas.Left="0"
                                 Canvas.Top="0"
                                 MouseLeftButtonDown="LogoOverlay_MouseLeftButtonDown"
                                 MouseMove="LogoOverlay_MouseMove"
                                 MouseLeftButtonUp="LogoOverlay_MouseLeftButtonUp"/>
                        </Canvas>
                        <Canvas x:Name="SplitPortraitDividerCanvas"
                                Visibility="Collapsed"
                                Background="Transparent"
                                SizeChanged="SplitPortraitDividerCanvas_SizeChanged"
                                MouseMove="SplitPortraitDividerCanvas_MouseMove"
                                MouseLeftButtonUp="SplitPortraitDividerCanvas_MouseLeftButtonUp">
                          <Border x:Name="SplitPortraitDividerHandle"
                                  Width="72"
                                  Height="24"
                                  Background="{DynamicResource Brush.Overlay.Handle.Background}"
                                  BorderBrush="{DynamicResource Brush.Overlay.Handle.Border}"
                                  BorderThickness="1"
                                  CornerRadius="12"
                                  Cursor="SizeNS"
                                  MouseLeftButtonDown="SplitPortraitDividerHandle_MouseLeftButtonDown">
                            <TextBlock Text="::"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource Brush.Overlay.Handle.Foreground}"
                                       FontSize="14"/>
                          </Border>
                        </Canvas>
                      </Grid>
                    </Border>
                  </StackPanel>

                  <StackPanel Grid.Column="2">
                    <TextBlock Text="{DynamicResource Clipper.Split.Workbench.Landscape}"
                               FontSize="{DynamicResource FontSizeXS}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="{DynamicResource Clipper.Split.Workbench.LandscapeHint}"
                               FontSize="{DynamicResource FontSizeXS}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Margin="0,0,0,8"/>
                    <Border x:Name="SplitSourcePreviewBorder"
                            Background="Black"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="{DynamicResource RadiusM}"
                            ClipToBounds="True"
                            MinHeight="240">
                      <Grid x:Name="SplitSourceContentRoot"
                            SizeChanged="RoundedPreviewContentRoot_SizeChanged">
                        <Image x:Name="SplitSourceImage"
                               Stretch="Uniform"/>
                        <MediaElement x:Name="SplitSourceMediaElement"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Stop"
                                      ScrubbingEnabled="True"
                                      IsMuted="False"
                                      Stretch="Uniform"
                                      Visibility="Collapsed"
                                      IsHitTestVisible="False"
                                      MediaOpened="SplitSourceMediaElement_MediaOpened"
                                      MediaEnded="SplitSourceMediaElement_MediaEnded"/>
                        <Canvas x:Name="SplitSelectionCanvas"
                                Background="Transparent"
                                SizeChanged="SplitSelectionCanvas_SizeChanged"
                                MouseLeftButtonDown="SplitSelectionCanvas_MouseLeftButtonDown"
                                MouseMove="SplitSelectionCanvas_MouseMove"
                                MouseLeftButtonUp="SplitSelectionCanvas_MouseLeftButtonUp">
                          <Border x:Name="SplitPrimarySelectionBox"
                                  BorderThickness="2"
                                  BorderBrush="{DynamicResource Brush.Selection.Primary.Border}"
                                  Background="{DynamicResource Brush.Selection.Primary.Fill}"/>
                          <Border x:Name="SplitPrimaryResizeHandleTopLeft"
                                  Width="10"
                                  Height="10"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource Brush.Selection.Primary.Border}"
                                  Background="{DynamicResource Brush.Selection.Primary.Border}"/>
                          <Border x:Name="SplitPrimaryResizeHandleTopRight"
                                  Width="10"
                                  Height="10"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource Brush.Selection.Primary.Border}"
                                  Background="{DynamicResource Brush.Selection.Primary.Border}"/>
                          <Border x:Name="SplitPrimaryResizeHandleBottomLeft"
                                  Width="10"
                                  Height="10"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource Brush.Selection.Primary.Border}"
                                  Background="{DynamicResource Brush.Selection.Primary.Border}"/>
                          <Border x:Name="SplitPrimaryResizeHandleBottomRight"
                                  Width="10"
                                  Height="10"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource Brush.Selection.Primary.Border}"
                                  Background="{DynamicResource Brush.Selection.Primary.Border}"/>

                          <Border x:Name="SplitSecondarySelectionBox"
                                  BorderThickness="2"
                                  BorderBrush="{DynamicResource Brush.Selection.Secondary.Border}"
                                  Background="{DynamicResource Brush.Selection.Secondary.Fill}"/>
                          <Border x:Name="SplitSecondaryResizeHandleTopLeft"
                                  Width="10"
                                  Height="10"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource Brush.Selection.Secondary.Border}"
                                  Background="{DynamicResource Brush.Selection.Secondary.Border}"/>
                          <Border x:Name="SplitSecondaryResizeHandleTopRight"
                                  Width="10"
                                  Height="10"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource Brush.Selection.Secondary.Border}"
                                  Background="{DynamicResource Brush.Selection.Secondary.Border}"/>
                          <Border x:Name="SplitSecondaryResizeHandleBottomLeft"
                                  Width="10"
                                  Height="10"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource Brush.Selection.Secondary.Border}"
                                  Background="{DynamicResource Brush.Selection.Secondary.Border}"/>
                          <Border x:Name="SplitSecondaryResizeHandleBottomRight"
                                  Width="10"
                                  Height="10"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource Brush.Selection.Secondary.Border}"
                                  Background="{DynamicResource Brush.Selection.Secondary.Border}"/>
                        </Canvas>
                      </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                      <Button x:Name="SplitLayoutEditButton"
                              Content="{DynamicResource Clipper.Split.EditMode.EditLayout}"
                              Style="{DynamicResource Control.Button.Tertiary}"
                              ap:ButtonIcon.Glyph="&#xe3c9;"
                              Click="SplitLayoutEditButton_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                      <Button x:Name="SplitSoloButton"
                              Content="{DynamicResource Clipper.Split.Mode.Solo}"
                              Style="{DynamicResource Control.Button.Tertiary}"
                              ap:ButtonIcon.Glyph="&#xe400;"
                              Click="SplitSoloButton_Click"/>
                      <Button x:Name="SplitDuoButton"
                              Content="{DynamicResource Clipper.Split.Mode.Duo}"
                              Style="{DynamicResource Control.Button.Tertiary}"
                              ap:ButtonIcon.Glyph="&#xe401;"
                              Margin="8,0,0,0"
                              Click="SplitDuoButton_Click"/>
                    </StackPanel>
                  </StackPanel>
                </Grid>
              </Grid>

              <!-- Controls -->
              <Grid Grid.Row="1" Margin="0,12,0,0">
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="{DynamicResource SpacingS}"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Progress -->
                <Grid Grid.Row="0">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="{DynamicResource SpacingS}"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="{DynamicResource SpacingS}"/>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>

                  <TextBlock x:Name="PreviewCurrentTimeText"
                             Grid.Column="0"
                             Text="0:00"
                             FontSize="{DynamicResource FontSizeXS}"
                             Foreground="{DynamicResource TextMutedBrush}"
                             VerticalAlignment="Center"/>

                  <Slider x:Name="PreviewProgressSlider"
                          Grid.Column="2"
                          Style="{DynamicResource Control.Slider.Clipper.Timeline}"
                          VerticalAlignment="Center"
                          IsEnabled="True"
                          IsMoveToPointEnabled="True"
                          Minimum="0"
                          Maximum="100"
                          Value="0"
                          PreviewMouseDown="PreviewProgressSlider_PreviewMouseDown"
                          PreviewMouseUp="PreviewProgressSlider_PreviewMouseUp"
                          LostMouseCapture="PreviewProgressSlider_LostMouseCapture"
                          ValueChanged="PreviewProgressSlider_ValueChanged"/>

                  <TextBlock x:Name="PreviewEndTimeText"
                             Grid.Column="4"
                             Text="0:00"
                             FontSize="{DynamicResource FontSizeXS}"
                             Foreground="{DynamicResource TextMutedBrush}"
                             VerticalAlignment="Center"/>
                </Grid>

                <!-- Buttons -->
                <Border Grid.Row="2"
                        Style="{DynamicResource Control.Container.Clipper.MediaGroupCard}">
                  <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center">
                  <Button x:Name="PreviewPlayButton"
                          Click="PreviewPlayButton_Click"
                          Style="{DynamicResource Control.Button.Clipper.Icon.Primary}"
                          ToolTip="{DynamicResource Clipper.Preview.Play}">
                    <TextBlock x:Name="PreviewPlayButtonIcon"
                               Style="{DynamicResource Control.Text.Clipper.MediaGlyph}"
                               Text="&#xe037;"/>
                  </Button>

                  <Button x:Name="PreviewStopButton"
                          Click="PreviewStopButton_Click"
                          Style="{DynamicResource Control.Button.Clipper.Icon}"
                          Margin="8,0,0,0"
                          ToolTip="{DynamicResource Clipper.Preview.Stop}">
                    <TextBlock Style="{DynamicResource Control.Text.Clipper.MediaGlyph}"
                               Text="&#xe047;"/>
                  </Button>

                  <Button x:Name="PreviewRestartButton"
                          Click="PreviewRestartButton_Click"
                          Style="{DynamicResource Control.Button.Clipper.Icon}"
                          Margin="8,0,0,0"
                          ToolTip="{DynamicResource Clipper.Preview.Restart}">
                    <TextBlock Style="{DynamicResource Control.Text.Clipper.MediaGlyph}"
                               Text="&#xe042;"/>
                  </Button>

                  <!-- Volume Controls -->
                  <Border Background="{DynamicResource SurfaceElevatedBrush}"
                          CornerRadius="{DynamicResource RadiusS}"
                          Padding="4,0"
                          Margin="24,0,0,0"
                          VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                      <Button x:Name="PreviewMuteButton"
                              Click="PreviewMuteButton_Click"
                              Style="{DynamicResource Control.Button.Clipper.Icon}"
                              Width="36" Height="36"
                              ToolTip="{DynamicResource Clipper.Preview.Mute}">
                        <TextBlock x:Name="PreviewVolumeIcon"
                                   Style="{DynamicResource Control.Text.Clipper.MediaGlyph}"
                                   Text="&#xe04d;"/>
                      </Button>
                      <Slider x:Name="PreviewVolumeSlider"
                              Width="112"
                              Style="{DynamicResource Control.Slider.Clipper.Volume}"
                              Minimum="0"
                              Maximum="1"
                              Value="0.5"
                              VerticalAlignment="Center"
                              ValueChanged="PreviewVolumeSlider_ValueChanged"/>
                    </StackPanel>
                  </Border>
                  </StackPanel>
                </Border>
              </Grid>

              <!-- Clip Details -->
              <Border Grid.Row="2"
                      Margin="0,16,0,0"
                      BorderThickness="0,1,0,0"
                      BorderBrush="{DynamicResource BorderBrush}"
                      Padding="0,16,0,0">
                <StackPanel x:Name="ClipDetailsPanel">
                  <!-- Score Badge -->
                  <StackPanel Orientation="Horizontal"
                              Margin="0,0,0,12">
                    <TextBlock Text="{DynamicResource Clipper.Score}"
                               FontSize="{DynamicResource FontSizeM}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               VerticalAlignment="Center"/>
                    <Border Background="{DynamicResource PrimaryBrush}"
                            CornerRadius="{DynamicResource RadiusS}"
                            Padding="12,6"
                            Margin="12,0,0,0">
                      <TextBlock x:Name="ClipScoreText"
                                 Text="0.0"
                                 FontWeight="Bold"
                                 FontSize="{DynamicResource FontSizeL}"
                                 Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </Border>
                  </StackPanel>

                  <!-- Time Info -->
                  <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{DynamicResource Clipper.Duration}"
                               FontSize="{DynamicResource FontSizeS}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Width="70"/>
                    <TextBlock x:Name="ClipTimeRangeText"
                               Grid.Column="1"
                               Text="0:00 - 0:00 (0s)"
                               FontSize="{DynamicResource FontSizeS}"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                  </Grid>

                  <!-- Reason -->
                  <StackPanel>
                    <TextBlock Text="{DynamicResource Clipper.Reason}"
                               FontSize="{DynamicResource FontSizeS}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="ClipReasonText"
                               Text=""
                               FontSize="{DynamicResource FontSizeM}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               LineHeight="22"/>
                  </StackPanel>
                </StackPanel>
              </Border>
            </Grid>

            <!-- Empty State -->
            <StackPanel x:Name="VideoEmptyStatePanel"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Visible">
              <TextBlock Style="{DynamicResource Control.Icon.64}"
                         Text="&#xe04b;"
                         Foreground="{DynamicResource TextMutedBrush}"
                         HorizontalAlignment="Center"/>
              <TextBlock Text="{DynamicResource Clipper.Preview.EmptyState}"
                         FontSize="{DynamicResource FontSizeS}"
                         Foreground="{DynamicResource TextMutedBrush}"
                         HorizontalAlignment="Center"
                         TextWrapping="Wrap"
                         MaxWidth="300"
                         Margin="0,16,0,0"/>
            </StackPanel>
          </Grid>
        </Border>
      </Grid>
    </Grid>
  </Grid>
</UserControl>

