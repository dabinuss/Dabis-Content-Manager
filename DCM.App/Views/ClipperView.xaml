<UserControl x:Class="DCM.App.Views.ClipperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:DCM.Core.Models;assembly=DCM.Core"
             xmlns:ap="clr-namespace:DCM.App.Infrastructure.AttachedProperties">
  <Grid Margin="{StaticResource ViewRootMargin}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="280"/>
      <ColumnDefinition Width="{StaticResource SpacingM}"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition x:Name="EditorSplitterColumn" Width="0"/>
      <ColumnDefinition x:Name="EditorColumn" Width="0" MinWidth="0"/>
    </Grid.ColumnDefinitions>

    <!-- Left Panel: Draft Selection -->
    <Grid Grid.Column="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="{StaticResource SpacingM}"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0"
                 Text="{DynamicResource Clipper.SelectDraft}"
                 Style="{StaticResource SectionHeader}"/>

      <Border Grid.Row="2"
              Style="{StaticResource SurfaceCard}">
        <ListBox x:Name="DraftListBox"
                 SelectionChanged="DraftListBox_SelectionChanged"
                 Background="Transparent"
                 BorderThickness="0"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Margin="8">
                <TextBlock Text="{Binding Title}"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding VideoDuration}"
                           FontSize="{StaticResource FontSizeXS}"
                           Foreground="{StaticResource TextMutedBrush}"
                           Margin="0,4,0,0"/>
                <WrapPanel Margin="0,4,0,0">
                  <TextBlock Style="{StaticResource IconS}"
                             Text="&#xe873;"
                             Foreground="{StaticResource SuccessBrush}"
                             Visibility="{Binding HasTranscript, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                  <TextBlock Text="{DynamicResource Clipper.HasTranscript}"
                             FontSize="{StaticResource FontSizeXS}"
                             Foreground="{StaticResource SuccessBrush}"
                             Margin="4,0,0,0"
                             Visibility="{Binding HasTranscript, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                  <TextBlock Text="{DynamicResource Clipper.NoTranscript}"
                             FontSize="{StaticResource FontSizeXS}"
                             Foreground="{StaticResource TextMutedBrush}"
                             Visibility="{Binding HasTranscript, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                </WrapPanel>
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </Border>
    </Grid>

    <GridSplitter x:Name="EditorGridSplitter"
                  Grid.Column="3"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ResizeBehavior="PreviousAndNext"
                  ShowsPreview="True"
                  Background="{StaticResource BorderBrush}"
                  Visibility="Collapsed"/>

    <!-- Right Panel: Candidates -->
    <Grid x:Name="OverviewPanel"
          Grid.Column="2">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="{StaticResource SpacingM}"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0"
                 Text="{DynamicResource Clipper.Candidates}"
                 Style="{StaticResource SectionHeader}"/>

      <Border Grid.Row="2"
              Style="{StaticResource SurfaceCard}">
        <Grid>
          <!-- Empty State -->
          <StackPanel x:Name="EmptyStatePanel"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Visibility="Visible">
            <TextBlock Style="{StaticResource Icon64}"
                       Text="&#xe04a;"
                       Foreground="{StaticResource TextMutedBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{DynamicResource Clipper.EmptyState.Title}"
                       FontSize="{StaticResource FontSizeL}"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
            <TextBlock Text="{DynamicResource Clipper.EmptyState.Description}"
                       FontSize="{StaticResource FontSizeS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="400"
                       Margin="0,8,0,0"/>
          </StackPanel>

          <!-- Candidates List -->
          <ListBox x:Name="CandidatesListBox"
                   Visibility="Collapsed"
                   Background="Transparent"
                   BorderThickness="0"
                   HorizontalContentAlignment="Stretch"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                   SelectionMode="Extended">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Border Padding="12"
                        Margin="0,0,0,8"
                        Background="{StaticResource SurfaceElevatedBrush}"
                        CornerRadius="{StaticResource RadiusM}">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="{StaticResource SpacingM}"/>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsSelected}"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2">
                      <TextBlock Text="{Binding PreviewText}"
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 TextWrapping="Wrap"/>
                      <WrapPanel Margin="0,8,0,0">
                        <TextBlock Text="{Binding StartFormatted}"
                                   FontSize="{StaticResource FontSizeXS}"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text=" - "
                                   FontSize="{StaticResource FontSizeXS}"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text="{Binding EndFormatted}"
                                   FontSize="{StaticResource FontSizeXS}"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text=" ("
                                   FontSize="{StaticResource FontSizeXS}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   Margin="8,0,0,0"/>
                        <TextBlock Text="{Binding DurationFormatted}"
                                   FontSize="{StaticResource FontSizeXS}"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text=")"
                                   FontSize="{StaticResource FontSizeXS}"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                      </WrapPanel>
                      <TextBlock Text="{Binding Reason}"
                                 FontSize="{StaticResource FontSizeXS}"
                                 Foreground="{StaticResource TextMutedBrush}"
                                 TextWrapping="Wrap"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="3"
                            VerticalAlignment="Center">
                      <StackPanel>
                        <Border Background="{StaticResource PrimaryBrush}"
                                CornerRadius="{StaticResource RadiusS}"
                                Padding="8,4"
                                HorizontalAlignment="Right">
                          <TextBlock Text="{Binding Score, StringFormat={}{0:F1}}"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource PrimaryTextBrush}"/>
                        </Border>
                        <Button Content="{DynamicResource Clipper.Actions.EditCandidate}"
                                Style="{StaticResource TertiaryButton}"
                                Margin="0,8,0,0"
                                Padding="10,4"
                                Tag="{Binding}"
                                Click="CandidateSettingsButton_Click"/>
                      </StackPanel>
                    </Border>
                  </Grid>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>

          <!-- Loading State -->
          <StackPanel x:Name="LoadingPanel"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Visibility="Collapsed">
            <ProgressBar IsIndeterminate="True"
                         Width="200"
                         Height="4"/>
            <TextBlock x:Name="LoadingStatusText"
                       Text="{DynamicResource Clipper.Loading}"
                       FontSize="{StaticResource FontSizeS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
          </StackPanel>
        </Grid>
      </Border>
    </Grid>

    <!-- Right Panel: Candidate Editor -->
    <Grid x:Name="EditorPanel"
          Grid.Column="2"
          Grid.ColumnSpan="3"
          Visibility="Collapsed">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="{StaticResource SpacingM}"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Border Grid.Row="0"
              Style="{StaticResource SurfaceCard}"
              Padding="12">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="{StaticResource SpacingM}"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <Button Grid.Column="0"
                  Content="{DynamicResource Clipper.Actions.BackToOverview}"
                  Style="{StaticResource TertiaryButton}"
                  Click="BackToOverviewButton_Click"/>

          <StackPanel Grid.Column="2"
                      VerticalAlignment="Center">
            <TextBlock x:Name="EditorCandidateTitleText"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="EditorCandidateTimeText"
                       Margin="0,3,0,0"
                       FontSize="{StaticResource FontSizeXS}"
                       Foreground="{StaticResource TextMutedBrush}"/>
          </StackPanel>
        </Grid>
      </Border>

      <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="360" MinWidth="300"/>
          <ColumnDefinition Width="{StaticResource SpacingM}"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Style="{StaticResource SurfaceCard}"
                Padding="12">
          <ScrollViewer VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
            <TextBlock Text="{DynamicResource Clipper.Settings}"
                       FontWeight="SemiBold"
                       FontSize="{StaticResource FontSizeS}"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{DynamicResource Clipper.Settings.ApplyHint}"
                       FontSize="{StaticResource FontSizeXS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,4,0,0"/>

            <TextBlock Text="{DynamicResource Clipper.Settings.Layout}"
                       FontSize="{StaticResource FontSizeXS}"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,14,0,6"/>
            <TextBlock Text="{DynamicResource Clipper.Settings.CropMode}"
                       FontSize="{StaticResource FontSizeXS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,2,0,6"/>
            <ComboBox x:Name="CropModeComboBox"
                      SelectionChanged="CropModeComboBox_SelectionChanged">
              <ComboBoxItem Tag="AutoDetect"
                            Content="{DynamicResource Clipper.Settings.CropMode.Auto}"/>
              <ComboBoxItem Tag="Center"
                            Content="{DynamicResource Clipper.Settings.CropMode.Center}"/>
              <ComboBoxItem Tag="Manual"
                            Content="{DynamicResource Clipper.Settings.CropMode.Manual}"/>
            </ComboBox>

            <StackPanel x:Name="ManualCropOffsetPanel"
                        Visibility="Collapsed"
                        Margin="0,8,0,0">
              <TextBlock Text="{DynamicResource Clipper.Settings.ManualOffset}"
                         FontSize="{StaticResource FontSizeXS}"
                         Foreground="{StaticResource TextMutedBrush}"/>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="ManualCropOffsetSlider"
                        Grid.Column="0"
                        Minimum="-1"
                        Maximum="1"
                        Value="0"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="False"/>
                <TextBlock x:Name="ManualCropOffsetValueText"
                           Grid.Column="1"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="{StaticResource FontSizeXS}"
                           Foreground="{StaticResource TextMutedBrush}"
                           Text="0.00"/>
              </Grid>
            </StackPanel>

            <Separator Margin="0,14,0,12"/>

            <TextBlock Text="{DynamicResource Clipper.Settings.Subtitles}"
                       FontSize="{StaticResource FontSizeXS}"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <CheckBox x:Name="EnableSubtitlesCheckBox"
                      Content="{DynamicResource Clipper.Settings.EnableSubtitles}"
                      Margin="0,8,0,0"/>
            <CheckBox x:Name="WordHighlightCheckBox"
                      Content="{DynamicResource Clipper.Settings.WordHighlight}"
                      Margin="0,6,0,0"/>

            <TextBlock Text="{DynamicResource Clipper.Settings.FontSize}"
                       FontSize="{StaticResource FontSizeXS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,12,0,6"/>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Slider x:Name="SubtitleFontSizeSlider"
                      Grid.Column="0"
                      Minimum="48"
                      Maximum="300"
                      Value="96"
                      TickFrequency="4"
                      IsSnapToTickEnabled="False"/>
              <TextBlock x:Name="SubtitleFontSizeValueText"
                         Grid.Column="1"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="{StaticResource FontSizeXS}"
                         Foreground="{StaticResource TextMutedBrush}"
                         Text="72"/>
            </Grid>

            <TextBlock Text="{DynamicResource Clipper.Settings.PositionX}"
                       FontSize="{StaticResource FontSizeXS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,12,0,6"/>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Slider x:Name="SubtitlePositionXSlider"
                      Grid.Column="0"
                      Minimum="0"
                      Maximum="1"
                      Value="0.5"
                      TickFrequency="0.01"
                      IsSnapToTickEnabled="False"/>
              <TextBlock x:Name="SubtitlePositionXValueText"
                         Grid.Column="1"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="{StaticResource FontSizeXS}"
                         Foreground="{StaticResource TextMutedBrush}"
                         Text="0.50"/>
            </Grid>

            <TextBlock Text="{DynamicResource Clipper.Settings.PositionY}"
                       FontSize="{StaticResource FontSizeXS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,12,0,6"/>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Slider x:Name="SubtitlePositionYSlider"
                      Grid.Column="0"
                      Minimum="0"
                      Maximum="1"
                      Value="0.7"
                      TickFrequency="0.01"
                      IsSnapToTickEnabled="False"/>
              <TextBlock x:Name="SubtitlePositionYValueText"
                         Grid.Column="1"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="{StaticResource FontSizeXS}"
                         Foreground="{StaticResource TextMutedBrush}"
                         Text="0.70"/>
            </Grid>

            <TextBlock Text="{DynamicResource Clipper.Settings.Presets}"
                       FontSize="{StaticResource FontSizeXS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,12,0,6"/>
            <UniformGrid Columns="4">
              <Button Content="{DynamicResource Clipper.Settings.Preset.Top}"
                      Style="{StaticResource TertiaryButton}"
                      Margin="0,0,6,0"
                      Click="SubtitlePresetTopButton_Click"/>
              <Button Content="{DynamicResource Clipper.Settings.Preset.Middle}"
                      Style="{StaticResource TertiaryButton}"
                      Margin="0,0,6,0"
                      Click="SubtitlePresetMiddleButton_Click"/>
              <Button Content="{DynamicResource Clipper.Settings.Preset.Bottom}"
                      Style="{StaticResource TertiaryButton}"
                      Margin="0,0,6,0"
                      Click="SubtitlePresetBottomButton_Click"/>
              <Button Content="{DynamicResource Clipper.Settings.Preset.Reset}"
                      Style="{StaticResource TertiaryButton}"
                      Click="SubtitlePresetResetButton_Click"/>
            </UniformGrid>

            <Separator Margin="0,14,0,12"/>

            <!-- Logo Section -->
            <TextBlock Text="{DynamicResource Clipper.Settings.Logo}"
                       FontSize="{StaticResource FontSizeXS}"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <Grid Margin="0,8,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <TextBlock x:Name="LogoPathText"
                         Grid.Column="0"
                         Text="{DynamicResource Clipper.Settings.NoLogo}"
                         FontSize="{StaticResource FontSizeXS}"
                         Foreground="{StaticResource TextMutedBrush}"
                         VerticalAlignment="Center"
                         TextTrimming="CharacterEllipsis"/>
              <Button Grid.Column="1"
                      Content="{DynamicResource Clipper.Settings.SelectLogo}"
                      Style="{StaticResource TertiaryButton}"
                      Margin="8,0,0,0"
                      Padding="10,4"
                      Click="SelectLogoButton_Click"/>
              <Button x:Name="ClearLogoButton"
                      Grid.Column="2"
                      Style="{StaticResource TertiaryButton}"
                      Margin="4,0,0,0"
                      Padding="6,4"
                      Visibility="Collapsed"
                      Click="ClearLogoButton_Click">
                <TextBlock Style="{StaticResource IconS}"
                           Text="&#xe5cd;"/>
              </Button>
            </Grid>
            </StackPanel>
          </ScrollViewer>
        </Border>

        <Border Grid.Column="2"
                Style="{StaticResource SurfaceCard}">
          <Grid>
            <!-- Video Player -->
            <Grid x:Name="VideoPlayerPanel"
                  Visibility="Collapsed">
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <!-- Portrait Preview Container (9:16 Aspect Ratio) -->
              <Grid Grid.Row="0" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Container with 9:16 aspect ratio -->
                <Border x:Name="PortraitPreviewBorder"
                        Background="Black"
                        CornerRadius="{StaticResource RadiusM}"
                        MaxWidth="360"
                        ClipToBounds="True">
                  <Grid>
                    <!-- Viewbox for 9:16 aspect ratio -->
                    <Viewbox Stretch="Uniform" StretchDirection="Both">
                      <Border Width="1080" Height="1920" Background="Black">
                        <Grid>
                          <!-- Portrait Preview Frame (shown when paused) -->
                          <Image x:Name="CroppedPreviewImage"
                                 Stretch="Uniform"/>

                          <!-- Video Playback (shown during play) -->
                          <MediaElement x:Name="PreviewMediaElement"
                                        LoadedBehavior="Manual"
                                        UnloadedBehavior="Stop"
                                        ScrubbingEnabled="True"
                                        Stretch="UniformToFill"
                                        Visibility="Collapsed"
                                        MediaOpened="PreviewMediaElement_MediaOpened"
                                        MediaEnded="PreviewMediaElement_MediaEnded"/>

                          <!-- Subtitle Overlay -->
                          <Canvas x:Name="SubtitleOverlayCanvas"
                                  Background="Transparent"
                                  SizeChanged="SubtitleOverlayCanvas_SizeChanged"
                                  MouseLeftButtonDown="SubtitleOverlayCanvas_MouseLeftButtonDown"
                                  MouseMove="SubtitleOverlayCanvas_MouseMove"
                                  MouseLeftButtonUp="SubtitleOverlayCanvas_MouseLeftButtonUp">
                            <Border x:Name="SubtitlePlacementPreview"
                                    Background="#66000000"
                                    BorderBrush="#CCFFFFFF"
                                    BorderThickness="1"
                                    Padding="8,4"
                                    CornerRadius="4"
                                    Cursor="SizeAll"
                                    Canvas.Left="0"
                                    Canvas.Top="0">
                              <TextBlock Text="Aa"
                                         FontSize="22"
                                         Foreground="White"
                                         FontWeight="Bold"/>
                            </Border>
                          </Canvas>
                        </Grid>
                      </Border>
                    </Viewbox>
                  </Grid>
                </Border>

                <!-- Fallback frame image (not used anymore, kept for compatibility) -->
                <Image x:Name="PreviewFrameImage"
                       Visibility="Collapsed"
                       Stretch="Uniform"
                       IsHitTestVisible="False"/>
              </Grid>

              <!-- Controls -->
              <Grid Grid.Row="1" Margin="0,12,0,0">
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="{StaticResource SpacingS}"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Progress -->
                <Grid Grid.Row="0">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="{StaticResource SpacingS}"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="{StaticResource SpacingS}"/>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>

                  <TextBlock x:Name="PreviewCurrentTimeText"
                             Grid.Column="0"
                             Text="0:00"
                             FontSize="{StaticResource FontSizeXS}"
                             Foreground="{StaticResource TextMutedBrush}"
                             VerticalAlignment="Center"/>

                  <Slider x:Name="PreviewProgressSlider"
                          Grid.Column="2"
                          VerticalAlignment="Center"
                          IsEnabled="True"
                          Minimum="0"
                          Maximum="100"
                          Value="0"
                          PreviewMouseDown="PreviewProgressSlider_PreviewMouseDown"
                          PreviewMouseUp="PreviewProgressSlider_PreviewMouseUp"
                          ValueChanged="PreviewProgressSlider_ValueChanged"/>

                  <TextBlock x:Name="PreviewEndTimeText"
                             Grid.Column="4"
                             Text="0:00"
                             FontSize="{StaticResource FontSizeXS}"
                             Foreground="{StaticResource TextMutedBrush}"
                             VerticalAlignment="Center"/>
                </Grid>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                  <Button x:Name="PreviewPlayButton"
                          Click="PreviewPlayButton_Click"
                          Style="{StaticResource TertiaryButton}"
                          Width="40" Height="40"
                          Padding="0"
                          ToolTip="{DynamicResource Clipper.Preview.Play}">
                    <TextBlock x:Name="PreviewPlayButtonIcon"
                               Style="{StaticResource IconM}"
                               Text="&#xe037;"/>
                  </Button>

                  <Button x:Name="PreviewStopButton"
                          Click="PreviewStopButton_Click"
                          Style="{StaticResource TertiaryButton}"
                          Width="40" Height="40"
                          Padding="0"
                          Margin="8,0,0,0"
                          ToolTip="{DynamicResource Clipper.Preview.Stop}">
                    <TextBlock Style="{StaticResource IconM}"
                               Text="&#xe047;"/>
                  </Button>

                  <Button x:Name="PreviewRestartButton"
                          Click="PreviewRestartButton_Click"
                          Style="{StaticResource TertiaryButton}"
                          Width="40" Height="40"
                          Padding="0"
                          Margin="8,0,0,0"
                          ToolTip="{DynamicResource Clipper.Preview.Restart}">
                    <TextBlock Style="{StaticResource IconM}"
                               Text="&#xe042;"/>
                  </Button>

                  <!-- Volume Controls -->
                  <Border Background="{StaticResource SurfaceElevatedBrush}"
                          CornerRadius="{StaticResource RadiusS}"
                          Padding="4,0"
                          Margin="24,0,0,0"
                          VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                      <Button x:Name="PreviewMuteButton"
                              Click="PreviewMuteButton_Click"
                              Style="{StaticResource TertiaryButton}"
                              Width="32" Height="32"
                              Padding="0"
                              ToolTip="{DynamicResource Clipper.Preview.Mute}">
                        <TextBlock x:Name="PreviewVolumeIcon"
                                   Style="{StaticResource IconS}"
                                   Text="&#xe04d;"/>
                      </Button>
                      <Slider x:Name="PreviewVolumeSlider"
                              Width="80"
                              Minimum="0"
                              Maximum="1"
                              Value="0.5"
                              VerticalAlignment="Center"
                              ValueChanged="PreviewVolumeSlider_ValueChanged"/>
                    </StackPanel>
                  </Border>
                </StackPanel>
              </Grid>

              <!-- Clip Details -->
              <Border Grid.Row="2"
                      Margin="0,16,0,0"
                      BorderThickness="0,1,0,0"
                      BorderBrush="{StaticResource BorderBrush}"
                      Padding="0,16,0,0">
                <StackPanel x:Name="ClipDetailsPanel">
                  <!-- Score Badge -->
                  <StackPanel Orientation="Horizontal"
                              Margin="0,0,0,12">
                    <TextBlock Text="{DynamicResource Clipper.Score}"
                               FontSize="{StaticResource FontSizeM}"
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"/>
                    <Border Background="{StaticResource PrimaryBrush}"
                            CornerRadius="{StaticResource RadiusS}"
                            Padding="12,6"
                            Margin="12,0,0,0">
                      <TextBlock x:Name="ClipScoreText"
                                 Text="0.0"
                                 FontWeight="Bold"
                                 FontSize="{StaticResource FontSizeL}"
                                 Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>
                  </StackPanel>

                  <!-- Time Info -->
                  <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{DynamicResource Clipper.Duration}"
                               FontSize="{StaticResource FontSizeS}"
                               Foreground="{StaticResource TextMutedBrush}"
                               Width="70"/>
                    <TextBlock x:Name="ClipTimeRangeText"
                               Grid.Column="1"
                               Text="0:00 - 0:00 (0s)"
                               FontSize="{StaticResource FontSizeS}"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                  </Grid>

                  <!-- Reason -->
                  <StackPanel>
                    <TextBlock Text="{DynamicResource Clipper.Reason}"
                               FontSize="{StaticResource FontSizeS}"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="ClipReasonText"
                               Text=""
                               FontSize="{StaticResource FontSizeM}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               LineHeight="22"/>
                  </StackPanel>
                </StackPanel>
              </Border>
            </Grid>

            <!-- Empty State -->
            <StackPanel x:Name="VideoEmptyStatePanel"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Visible">
              <TextBlock Style="{StaticResource Icon64}"
                         Text="&#xe04b;"
                         Foreground="{StaticResource TextMutedBrush}"
                         HorizontalAlignment="Center"/>
              <TextBlock Text="{DynamicResource Clipper.Preview.EmptyState}"
                         FontSize="{StaticResource FontSizeS}"
                         Foreground="{StaticResource TextMutedBrush}"
                         HorizontalAlignment="Center"
                         TextWrapping="Wrap"
                         MaxWidth="300"
                         Margin="0,16,0,0"/>
            </StackPanel>
          </Grid>
        </Border>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
