<UserControl x:Class="DCM.App.Views.ChannelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:DCM.Core.Models;assembly=DCM.Core"
             xmlns:config="clr-namespace:DCM.Core.Configuration;assembly=DCM.Core">
<!-- wie PageUpload: Grid füllt die Breite, nur ein rechter Margin -->
<Grid Margin="0,0,8,0">

  <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <!-- Inhalt -->
  </Grid.RowDefinitions>

  <!-- ZWEI-SPALTEN-LAYOUT wie bei Upload -->
  <Grid Grid.Row="0"
        VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"
                        MinWidth="350"/>
      <ColumnDefinition Width="{StaticResource SpacingL}"/>
      <ColumnDefinition Width="*"
                        MinWidth="300"
                        MaxWidth="400"/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <!-- obere Boxen -->
      <RowDefinition Height="{StaticResource SpacingM}"/>
      <!-- Abstand -->
      <RowDefinition Height="Auto"/>
      <!-- untere Box -->
    </Grid.RowDefinitions>

    <!-- BOX 1: Kanalprofil (links) -->
    <GroupBox Grid.Row="0"
              Grid.Column="0"
              Header="{DynamicResource Channel.Persona.Profile}">
      <Grid Margin="8">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource Channel.Fields.Name}"
                   Style="{StaticResource TextLabel}"
                   Margin="0,0,0,8"/>
        <TextBox Grid.Row="1"
                 x:Name="ChannelPersonaNameTextBox"
                 Margin="0,0,0,4"
                 TextChanged="OnSettingChanged"/>
        <TextBlock Grid.Row="2"
                   Text="{DynamicResource Channel.Example.Name}"
                   FontSize="{StaticResource FontSizeXS}"
                   Foreground="{StaticResource TextMutedBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Grid.Row="3"
                   Text="{DynamicResource Channel.Fields.ChannelName}"
                   Style="{StaticResource TextLabel}"
                   Margin="0,0,0,8"/>
        <TextBox Grid.Row="4"
                 x:Name="ChannelPersonaChannelNameTextBox"
                 Margin="0,0,0,4"
                 TextChanged="OnSettingChanged"/>
        <TextBlock Grid.Row="5"
                   Text="{DynamicResource Channel.Example.ChannelName}"
                   FontSize="{StaticResource FontSizeXS}"
                   Foreground="{StaticResource TextMutedBrush}"/>
      </Grid>
    </GroupBox>

    <!-- BOX 2: Sprache & Stil (rechts) -->
    <GroupBox Grid.Row="0"
              Grid.Column="2"
              Header="{DynamicResource Channel.Persona.Style}">
      <Grid Margin="8">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource Channel.Fields.Language}"
                   Style="{StaticResource TextLabel}"
                   Margin="0,0,0,8"/>
        <ComboBox Grid.Row="1"
                  x:Name="ChannelPersonaLanguageTextBox"
                  IsEditable="True"
                  IsTextSearchEnabled="True"
                  StaysOpenOnEdit="True"
                  MinWidth="200"
                  ToolTip="{DynamicResource Channel.Example.Language}"
                  Margin="0,0,0,4"
                  SelectionChanged="OnComboBoxSettingChanged"/>
        <TextBlock Grid.Row="2"
                   Text="{DynamicResource Channel.Example.Language}"
                   FontSize="{StaticResource FontSizeXS}"
                   Foreground="{StaticResource TextMutedBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Grid.Row="3"
                   Text="{DynamicResource Channel.Fields.ToneOfWords}"
                   Style="{StaticResource TextLabel}"
                   Margin="0,0,0,8"/>
        <TextBox Grid.Row="4"
                 x:Name="ChannelPersonaToneOfVoiceTextBox"
                 ToolTip="{DynamicResource Channel.Example.Tone}"
                 Margin="0,0,0,4"
                 TextChanged="OnSettingChanged"/>
        <TextBlock Grid.Row="5"
                   Text="{DynamicResource Channel.Example.Tone}"
                   FontSize="{StaticResource FontSizeXS}"
                   Foreground="{StaticResource TextMutedBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Grid.Row="6"
                   Text="{DynamicResource Channel.Fields.ContentType}"
                   Style="{StaticResource TextLabel}"
                   Margin="0,0,0,8"/>
        <TextBox Grid.Row="7"
                 x:Name="ChannelPersonaContentTypeTextBox"
                 ToolTip="{DynamicResource Channel.Example.ContentType}"
                 Margin="0,0,0,4"
                 TextChanged="OnSettingChanged"/>
        <TextBlock Grid.Row="8"
                   Text="{DynamicResource Channel.Example.ContentType}"
                   FontSize="{StaticResource FontSizeXS}"
                   Foreground="{StaticResource TextMutedBrush}"
                   Margin="0,0,0,8"/>
        <TextBlock Grid.Row="9"
                   Text="{DynamicResource Channel.Fields.TargetAudience}"
                   Style="{StaticResource TextLabel}"
                   Margin="0,0,0,8"/>
        <TextBox Grid.Row="10"
                 x:Name="ChannelPersonaTargetAudienceTextBox"
                 ToolTip="{DynamicResource Channel.Example.TargetAudience}"
                 Margin="0,0,0,4"
                 TextChanged="OnSettingChanged"/>
        <TextBlock Grid.Row="11"
                   Text="{DynamicResource Channel.Example.TargetAudience}"
                   FontSize="{StaticResource FontSizeXS}"
                   Foreground="{StaticResource TextMutedBrush}"/>
      </Grid>
    </GroupBox>

    <!-- BOX 3: Zusätzliche Hinweise (unten, volle Breite) -->
    <GroupBox Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              Header="{DynamicResource Channel.Persona.Additional}">
      <Grid Margin="8">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource Channel.Fields.AdditionalInstructions}"
                   Foreground="{StaticResource TextMutedBrush}"
                   FontSize="{StaticResource FontSizeM}"/>
        <TextBox Grid.Row="1"
                 x:Name="ChannelPersonaAdditionalInstructionsTextBox"
                 Margin="0,8,0,0"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Height="80"
                 TextChanged="OnSettingChanged"/>
      </Grid>
    </GroupBox>

  </Grid>
</Grid>
</UserControl>

