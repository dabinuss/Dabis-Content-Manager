<UserControl x:Class="DCM.App.Views.GeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:DCM.Core.Models;assembly=DCM.Core"
             xmlns:config="clr-namespace:DCM.Core.Configuration;assembly=DCM.Core">
  <Grid Margin="0,0,8,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0"
          HorizontalAlignment="Left"
          MaxWidth="{StaticResource SettingsContentMaxWidth}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"
                          MinWidth="{StaticResource SettingsColumnMinWidth}"/>
        <ColumnDefinition Width="{StaticResource SpacingL}"/>
        <ColumnDefinition Width="*"
                          MinWidth="{StaticResource SettingsColumnMinWidth}"/>
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0"
                  Style="{StaticResource SettingsColumnStackStyle}">
        <GroupBox Style="{StaticResource SettingsSectionGroupBox}"
                  Header="{DynamicResource Settings.Language}">
          <StackPanel>
            <ComboBox x:Name="LanguageComboBox"
                      MinWidth="200"
                      SelectionChanged="LanguageComboBox_SelectionChanged"/>
            <TextBlock Text="{DynamicResource Settings.Language.Restart.Hint}"
                       FontSize="{StaticResource FontSizeS}"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,8,0,0"/>
          </StackPanel>
        </GroupBox>

        <GroupBox Style="{StaticResource SettingsSectionGroupBox}"
                  Header="{DynamicResource Settings.Theme}">
          <StackPanel>
            <ComboBox x:Name="ThemeComboBox"
                      MinWidth="200"
                      SelectionChanged="ThemeComboBox_SelectionChanged">
              <ComboBoxItem Content="{DynamicResource Settings.Theme.Dark}"
                            Tag="Dark"
                            IsSelected="True"/>
            </ComboBox>
          </StackPanel>
        </GroupBox>

        <GroupBox Style="{StaticResource SettingsSectionGroupBox}"
                  Header="{DynamicResource Settings.StandardFolders}">
          <StackPanel>
            <StackPanel>
              <TextBlock Text="{DynamicResource Settings.VideoFolder}"
                         FontSize="{StaticResource FontSizeS}"
                         Foreground="{StaticResource TextMutedBrush}"/>
              <StackPanel Orientation="Horizontal">
                <TextBox x:Name="DefaultVideoFolderTextBox"
                         Width="260"/>
                <Button x:Name="DefaultVideoFolderBrowseButton"
                        Content="{DynamicResource Settings.ChoosePath}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="8,0,0,0"
                        Click="DefaultVideoFolderBrowseButton_Click"/>
              </StackPanel>

              <TextBlock Text="{DynamicResource Settings.ThumbnailFolder}"
                         FontSize="{StaticResource FontSizeS}"
                         Foreground="{StaticResource TextMutedBrush}"
                         Margin="0,8,0,0"/>
              <StackPanel Orientation="Horizontal">
                <TextBox x:Name="DefaultThumbnailFolderTextBox"
                         Width="260"/>
                <Button x:Name="DefaultThumbnailFolderBrowseButton"
                        Content="{DynamicResource Settings.ChoosePath}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="8,0,0,0"
                        Click="DefaultThumbnailFolderBrowseButton_Click"/>
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </GroupBox>

      </StackPanel>

      <StackPanel Grid.Column="2"
                  Style="{StaticResource SettingsColumnStackStyle}">
        <GroupBox Style="{StaticResource SettingsSectionGroupBox}"
                  Header="{DynamicResource Settings.UploadSettings}">
          <StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
              <TextBlock Text="{DynamicResource Settings.StandardReleaseTime}"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         Width="200"/>
              <TextBox x:Name="DefaultSchedulingTimeTextBox"
                       Width="90"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
              <TextBlock Text="{DynamicResource Upload.Fields.Visibility}"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         Width="200"/>
              <ComboBox x:Name="DefaultVisibilityComboBox"
                        Width="160">
                <ComboBoxItem Content="{DynamicResource Upload.Fields.Visibility.Public}"
                              Tag="{x:Static core:VideoVisibility.Public}"/>
                <ComboBoxItem Content="{DynamicResource Upload.Fields.Visibility.Unlisted}"
                              Tag="{x:Static core:VideoVisibility.Unlisted}"/>
                <ComboBoxItem Content="{DynamicResource Upload.Fields.Visibility.Private}"
                              Tag="{x:Static core:VideoVisibility.Private}"/>
              </ComboBox>
            </StackPanel>
            <StackPanel>
              <CheckBox x:Name="ConfirmBeforeUploadCheckBox"
                        Content="{DynamicResource Settings.ConfirmUpload}"
                        Margin="0,8,0,0"/>
              <CheckBox x:Name="AutoApplyDefaultTemplateCheckBox"
                        Content="{DynamicResource Settings.AutomaticTemplateApply}"
                        Margin="0,8,0,0"/>
              <CheckBox x:Name="OpenBrowserAfterUploadCheckBox"
                        Content="{DynamicResource Settings.OpenBrowserAfterUpload}"
                        Margin="0,8,0,0"/>
              <CheckBox x:Name="AutoConnectYouTubeCheckBox"
                        Content="{DynamicResource Settings.AutomaticConnect}"
                        Margin="0,8,0,0"/>
            </StackPanel>
          </StackPanel>
        </GroupBox>

        <GroupBox Style="{StaticResource SettingsSectionGroupBox}"
                  Header="{DynamicResource Settings.Drafts}">
          <StackPanel>
            <CheckBox x:Name="RememberDraftsCheckBox"
                      Content="{DynamicResource Settings.Drafts.Remember}"
                      Margin="0,8,0,0"/>
            <CheckBox x:Name="AutoCleanDraftsCheckBox"
                      Content="{DynamicResource Settings.Drafts.AutoClean}"
                      Margin="0,8,0,0"/>
          </StackPanel>
        </GroupBox>

        <GroupBox Style="{StaticResource SettingsSectionGroupBox}"
                  Header="{DynamicResource Settings.Transcription}">
          <StackPanel>
            <CheckBox x:Name="TranscriptionAutoCheckBox"
                      Content="{DynamicResource Settings.AutomaticTranscription}"
                      Margin="0,8,0,0"/>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
              <TextBlock Text="{DynamicResource Settings.WhisperModelSize}"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         Width="200"/>
              <ComboBox x:Name="TranscriptionModelSizeComboBox"
                        Width="200"
                        SelectionChanged="TranscriptionModelSizeComboBox_SelectionChanged">
                <ComboBoxItem Content="{DynamicResource Settings.WhisperModelSize.Tiny}"
                              Tag="{x:Static config:WhisperModelSize.Tiny}"/>
                <ComboBoxItem Content="{DynamicResource Settings.WhisperModelSize.Base}"
                              Tag="{x:Static config:WhisperModelSize.Base}"/>
                <ComboBoxItem Content="{DynamicResource Settings.WhisperModelSize.Small}"
                              Tag="{x:Static config:WhisperModelSize.Small}"/>
                <ComboBoxItem Content="{DynamicResource Settings.WhisperModelSize.Medium}"
                              Tag="{x:Static config:WhisperModelSize.Medium}"/>
                <ComboBoxItem Content="{DynamicResource Settings.WhisperModelSize.Large}"
                              Tag="{x:Static config:WhisperModelSize.Large}"/>
              </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
              <TextBlock Text="{DynamicResource Settings.WhisperLanguage}"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         Width="200"/>
              <ComboBox x:Name="TranscriptionLanguageComboBox"
                        Width="200">
                <ComboBoxItem Content="{DynamicResource Settings.WhisperLanguage.De}"
                              Tag="de"/>
                <ComboBoxItem Content="{DynamicResource Settings.WhisperLanguage.En}"
                              Tag="en"/>
                <ComboBoxItem Content="{DynamicResource Settings.WhisperLanguage.Detect}"
                              Tag="auto"/>
              </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
              <TextBlock Text="{DynamicResource Common.Status}"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         Width="200"/>
              <TextBlock x:Name="TranscriptionStatusTextBlock"
                         Foreground="{StaticResource TextMutedBrush}"
                         Text="{DynamicResource Settings.Msg.NotChecked}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
              <Button x:Name="TranscriptionDownloadButton"
                      Content="{DynamicResource Settings.Whisper.Download}"
                      Style="{StaticResource SecondaryButton}"
                      Click="TranscriptionDownloadButton_Click"/>
              <ProgressBar x:Name="TranscriptionDownloadProgressBar"
                           Width="150"
                           Height="20"
                           Minimum="0"
                           Maximum="100"
                           Visibility="Collapsed"
                           Margin="8,0,0,0"/>
            </StackPanel>
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>

