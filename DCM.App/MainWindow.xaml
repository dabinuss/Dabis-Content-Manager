<Window x:Class="DCM.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:DCM.Core.Models;assembly=DCM.Core"
        Title="Dabis Content Manager"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <TabControl>
            <!-- TAB 1: Neuer Upload (kompakt & gruppiert) -->
            <TabItem Header="Neuer Upload">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Padding="4">
                    <StackPanel Margin="8" Orientation="Vertical">

                        <!-- Gruppe: Video & Plattform -->
                        <GroupBox Header="Video &amp; Plattform" Margin="0,0,0,12">
                            <StackPanel Margin="8" Orientation="Vertical">
                                <!-- Videodatei -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Label Content="Video:"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                    <TextBox x:Name="VideoPathTextBox"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"
                                             MinWidth="400"/>
                                    <Button x:Name="BrowseButton"
                                            Content="Durchsuchen..."
                                            Click="BrowseButton_Click"
                                            MinWidth="120"/>
                                </StackPanel>

                                <!-- Thumbnail-Auswahl -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Label Content="Thumbnail:"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                    <TextBox x:Name="ThumbnailPathTextBox"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"
                                             MinWidth="400"
                                             IsReadOnly="True"/>
                                    <Button x:Name="ThumbnailBrowseButton"
                                            Content="Durchsuchen..."
                                            Click="ThumbnailBrowseButton_Click"
                                            MinWidth="120"
                                            Margin="0,0,8,0"/>
                                    <Button x:Name="ThumbnailClearButton"
                                            Content="Entfernen"
                                            Click="ThumbnailClearButton_Click"
                                            MinWidth="90"/>
                                </StackPanel>

                                <!-- Plattform -->
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Plattform:"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                    <ComboBox x:Name="PlatformComboBox"
                                              MinWidth="200"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Gruppe: Playlist, Sichtbarkeit & Template -->
                        <GroupBox Header="Playlist &amp; Metadaten" Margin="0,0,0,12">
                            <StackPanel Margin="8" Orientation="Vertical">
                                <!-- Playlist -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Label Content="Playlist:"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                    <ComboBox x:Name="PlaylistComboBox"
                                              MinWidth="250"
                                              DisplayMemberPath="Title"
                                              ToolTip="Playlist, in die das Video einsortiert wird (YouTube)."/>
                                </StackPanel>

                                <!-- Sichtbarkeit -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Label Content="Sichtbarkeit:"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                    <ComboBox x:Name="VisibilityComboBox"
                                              MinWidth="180">
                                        <ComboBoxItem Content="Öffentlich" Tag="{x:Static core:VideoVisibility.Public}"/>
                                        <ComboBoxItem Content="Nicht gelistet" Tag="{x:Static core:VideoVisibility.Unlisted}" IsSelected="True"/>
                                        <ComboBoxItem Content="Privat" Tag="{x:Static core:VideoVisibility.Private}"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Template -->
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Template:"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                    <ComboBox x:Name="TemplateComboBox"
                                              MinWidth="250"
                                              DisplayMemberPath="Name"
                                              ToolTip="Template für die Beschreibung."
                                              SelectionChanged="TemplateComboBox_SelectionChanged"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Gruppe: Veröffentlichung (Scheduling) -->
                        <GroupBox Header="Veröffentlichung" Margin="0,0,0,12">
                            <StackPanel Margin="8" Orientation="Vertical">
                                <CheckBox x:Name="ScheduleCheckBox"
                                          Content="Geplante Veröffentlichung aktivieren"
                                          Margin="0,0,0,6"
                                          Checked="ScheduleCheckBox_Changed"
                                          Unchecked="ScheduleCheckBox_Changed"/>
                                <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                                    <Label Content="Datum:"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                    <DatePicker x:Name="ScheduleDatePicker"
                                                Width="140"
                                                IsEnabled="False"/>
                                    <Label Content="Zeit (HH:mm):"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                                    <TextBox x:Name="ScheduleTimeTextBox"
                                             Width="80"
                                             IsEnabled="False"
                                             Text="18:00"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Gruppe: Titel -->
                        <GroupBox Header="Titel" Margin="0,0,0,12">
                            <StackPanel Margin="8" Orientation="Vertical">
                                <Label Content="Titel:"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="TitleTextBox"
                                             Margin="0,0,8,0"
                                             MinWidth="400"/>
                                    <Button x:Name="GenerateTitleButton"
                                            Content="Titel vorschlagen"
                                            Click="GenerateTitleButton_Click"
                                            MinWidth="140"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Gruppe: Beschreibung -->
                        <GroupBox Header="Beschreibung" Margin="0,0,0,12">
                            <StackPanel Margin="8" Orientation="Vertical">
                                <TextBox x:Name="DescriptionTextBox"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         TextWrapping="Wrap"
                                         MinHeight="180"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Aktionen unten -->
                        <DockPanel LastChildFill="True">
                            <StackPanel Orientation="Horizontal"
                                        DockPanel.Dock="Left">
                                <Button x:Name="ApplyTemplateButton"
                                        Content="Template anwenden"
                                        Click="ApplyTemplateButton_Click"
                                        Margin="0,0,8,0"
                                        MinWidth="140"/>
                                <Button x:Name="UploadButton"
                                        Content="Upload"
                                        Click="UploadButton_Click"
                                        MinWidth="140"/>
                            </StackPanel>

                            <TextBlock x:Name="StatusTextBlock"
                                       DockPanel.Dock="Right"
                                       Text=""
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"/>
                        </DockPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 2: Konten -->
            <TabItem Header="Konten">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Padding="4">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <GroupBox Header="YouTube-Konto" Grid.Row="0" Margin="0,0,0,12">
                            <StackPanel Margin="8">
                                <TextBlock x:Name="YouTubeAccountStatusTextBlock"
                                           Text="Nicht mit YouTube verbunden."
                                           Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="YouTubeConnectButton"
                                            Content="Mit YouTube verbinden"
                                            Click="YouTubeConnectButton_Click"
                                            Margin="0,0,8,0"
                                            MinWidth="160"/>
                                    <Button x:Name="YouTubeDisconnectButton"
                                            Content="Trennen"
                                            Click="YouTubeDisconnectButton_Click"
                                            MinWidth="100"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="YouTube-Playlists" Grid.Row="1">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Standard-Playlist für neue Uploads:"
                                           Grid.Row="0"
                                           Margin="0,0,0,6"/>
                                <ListBox x:Name="YouTubePlaylistsListBox"
                                         Grid.Row="1"
                                         DisplayMemberPath="Title"
                                         MinHeight="140"
                                         SelectionChanged="YouTubePlaylistsListBox_SelectionChanged"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 3: Templates -->
            <TabItem Header="Templates">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Padding="4">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Seite: Liste + CRUD-Buttons -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Verfügbare Templates (aus JSON geladen)"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>
                            <ListBox x:Name="TemplateListBox"
                                     DisplayMemberPath="Name"
                                     MinHeight="220"
                                     SelectionChanged="TemplateListBox_SelectionChanged"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button x:Name="TemplateNewButton"
                                        Content="Neu"
                                        Click="TemplateNewButton_Click"
                                        MinWidth="80"
                                        Margin="0,0,8,0"/>
                                <Button x:Name="TemplateEditButton"
                                        Content="Bearbeiten"
                                        Click="TemplateEditButton_Click"
                                        MinWidth="100"
                                        Margin="0,0,8,0"/>
                                <Button x:Name="TemplateDeleteButton"
                                        Content="Löschen"
                                        Click="TemplateDeleteButton_Click"
                                        MinWidth="90"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Rechte Seite: Details & Bearbeitung -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Template-Details"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>

                            <Label Content="Name:"/>
                            <TextBox x:Name="TemplateNameTextBox"
                                     MinWidth="220"
                                     Margin="0,0,0,4"/>

                            <Label Content="Plattform:"/>
                            <ComboBox x:Name="TemplatePlatformComboBox"
                                      MinWidth="150"
                                      Margin="0,0,0,4"/>

                            <CheckBox x:Name="TemplateIsDefaultCheckBox"
                                      Content="Als Standard-Template für diese Plattform verwenden"
                                      Margin="0,0,0,4"/>

                            <Label Content="Beschreibung (optional):"/>
                            <TextBox x:Name="TemplateDescriptionTextBox"
                                     MinHeight="40"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,4"/>

                            <Label Content="Template-Text:"/>
                            <TextBox x:Name="TemplateBodyEditorTextBox"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     TextWrapping="Wrap"
                                     MinHeight="160"/>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,8,0,0"
                                        HorizontalAlignment="Right">
                                <Button x:Name="TemplateSaveButton"
                                        Content="Speichern"
                                        Click="TemplateSaveButton_Click"
                                        MinWidth="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 4: Historie -->
            <TabItem Header="Historie">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Padding="4">
                    <Grid Margin="8">
                        <TextBlock Text="Upload-Historie – Platzhalter für spätere Phasen."
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 5: App-Einstellungen -->
            <TabItem Header="App-Einstellungen">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Padding="4">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>  <!-- Ordner -->
                            <RowDefinition Height="Auto"/>  <!-- Upload-Defaults -->
                            <RowDefinition Height="Auto"/>  <!-- Speichern-Button -->
                        </Grid.RowDefinitions>

                        <!-- Ordner -->
                        <GroupBox Header="Ordner" Grid.Row="0" Margin="0,0,0,12">
                            <StackPanel Margin="8">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Label Content="Standard-Videoordner:"
                                           VerticalAlignment="Center"
                                           Width="160"/>
                                    <TextBox x:Name="DefaultVideoFolderTextBox"
                                             MinWidth="350"
                                             Margin="0,0,8,0"/>
                                    <Button x:Name="DefaultVideoFolderBrowseButton"
                                            Content="Wählen..."
                                            MinWidth="90"
                                            Click="DefaultVideoFolderBrowseButton_Click"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Standard-Thumbnailordner:"
                                           VerticalAlignment="Center"
                                           Width="160"/>
                                    <TextBox x:Name="DefaultThumbnailFolderTextBox"
                                             MinWidth="350"
                                             Margin="0,0,8,0"/>
                                    <Button x:Name="DefaultThumbnailFolderBrowseButton"
                                            Content="Wählen..."
                                            MinWidth="90"
                                            Click="DefaultThumbnailFolderBrowseButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Upload-Defaults -->
                        <GroupBox Header="Upload-Defaults" Grid.Row="1" Margin="0,0,0,12">
                            <StackPanel Margin="8">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Label Content="Standard-Zeit (HH:mm):"
                                           VerticalAlignment="Center"
                                           Width="160"/>
                                    <TextBox x:Name="DefaultSchedulingTimeTextBox"
                                             Width="80"
                                             Text="18:00"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Label Content="Standard-Sichtbarkeit:"
                                           VerticalAlignment="Center"
                                           Width="160"/>
                                    <ComboBox x:Name="DefaultVisibilityComboBox"
                                              MinWidth="150">
                                        <ComboBoxItem Content="Öffentlich" Tag="{x:Static core:VideoVisibility.Public}"/>
                                        <ComboBoxItem Content="Nicht gelistet" Tag="{x:Static core:VideoVisibility.Unlisted}"/>
                                        <ComboBoxItem Content="Privat" Tag="{x:Static core:VideoVisibility.Private}"/>
                                    </ComboBox>
                                </StackPanel>

                                <CheckBox x:Name="ConfirmBeforeUploadCheckBox"
                                          Content="Vor Upload um Bestätigung fragen"
                                          Margin="0,0,0,4"/>

                                <CheckBox x:Name="AutoApplyDefaultTemplateCheckBox"
                                          Content="Template automatisch anwenden (wenn Beschreibung leer ist)"
                                          Margin="0,0,0,4"/>

                                <CheckBox x:Name="OpenBrowserAfterUploadCheckBox"
                                          Content="Nach erfolgreichem Upload Browser mit Video öffnen"
                                          Margin="0,0,0,4"/>

                                <CheckBox x:Name="AutoConnectYouTubeCheckBox"
                                          Content="Beim Start automatisch mit YouTube verbinden (falls möglich)"
                                          Margin="0,0,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Speichern -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="AppSettingsSaveButton"
                                    Content="Speichern"
                                    MinWidth="100"
                                    Click="AppSettingsSaveButton_Click"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
