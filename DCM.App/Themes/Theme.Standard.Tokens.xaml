<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <!-- =================================================================== -->
  <!-- SEMANTIC BRUSH TOKENS (Brush.*)                                      -->
  <!-- =================================================================== -->

  <SolidColorBrush x:Key="Brush.Surface.Base"
                   Color="{DynamicResource SurfaceColor}"/>
  <SolidColorBrush x:Key="Brush.Surface.Subtle"
                   Color="{DynamicResource SurfaceLightColor}"/>
  <SolidColorBrush x:Key="Brush.Surface.Hover"
                   Color="{DynamicResource SurfaceHoverColor}"/>
  <SolidColorBrush x:Key="Brush.Surface.Pressed"
                   Color="{DynamicResource SurfacePressedColor}"/>
  <SolidColorBrush x:Key="Brush.Surface.Elevated"
                   Color="{DynamicResource SurfaceElevatedColor}"/>
  <SolidColorBrush x:Key="Brush.Surface.Sunken"
                   Color="{DynamicResource SurfaceSunkenColor}"/>

  <SolidColorBrush x:Key="Brush.Border.Base"
                   Color="{DynamicResource BorderColor}"/>
  <SolidColorBrush x:Key="Brush.Border.Hover"
                   Color="{DynamicResource BorderHoverColor}"/>
  <SolidColorBrush x:Key="Brush.Border.Strong"
                   Color="{DynamicResource BorderStrongColor}"/>

  <SolidColorBrush x:Key="Brush.Action.Primary"
                   Color="{DynamicResource PrimaryColor}"/>
  <SolidColorBrush x:Key="Brush.Action.Primary.Hover"
                   Color="{DynamicResource PrimaryHoverColor}"/>
  <SolidColorBrush x:Key="Brush.Action.Primary.Pressed"
                   Color="{DynamicResource PrimaryPressedColor}"/>
  <SolidColorBrush x:Key="Brush.Action.Success"
                   Color="{DynamicResource SuccessColor}"/>
  <SolidColorBrush x:Key="Brush.Action.Warning"
                   Color="{DynamicResource WarningColor}"/>
  <SolidColorBrush x:Key="Brush.Action.Danger"
                   Color="{DynamicResource DangerColor}"/>

  <SolidColorBrush x:Key="Brush.Text.Primary"
                   Color="{DynamicResource TextPrimaryColor}"/>
  <SolidColorBrush x:Key="Brush.Text.Secondary"
                   Color="{DynamicResource TextSecondaryColor}"/>
  <SolidColorBrush x:Key="Brush.Text.Muted"
                   Color="{DynamicResource TextMutedColor}"/>
  <SolidColorBrush x:Key="Brush.Text.Disabled"
                   Color="{DynamicResource TextDisabledColor}"/>

  <SolidColorBrush x:Key="Brush.Focus.Default"
                   Color="{DynamicResource PrimaryColor}"/>
  <SolidColorBrush x:Key="Brush.Validation.Error"
                   Color="{DynamicResource DangerColor}"/>

  <SolidColorBrush x:Key="Brush.Overlay.Scrim"
                   Color="Black"
                   Opacity="0.40"/>
  <SolidColorBrush x:Key="Brush.Overlay.ContrastBorder"
                   Color="White"
                   Opacity="0.80"/>
  <SolidColorBrush x:Key="Brush.Overlay.Handle.Background"
                   Color="Black"
                   Opacity="0.80"/>
  <SolidColorBrush x:Key="Brush.Overlay.Handle.Border"
                   Color="White"
                   Opacity="0.88"/>
  <SolidColorBrush x:Key="Brush.Overlay.Handle.Foreground"
                   Color="White"
                   Opacity="0.95"/>

  <SolidColorBrush x:Key="Brush.Selection.Primary.Border"
                   Color="#FFFF66FF"/>
  <SolidColorBrush x:Key="Brush.Selection.Primary.Fill"
                   Color="#22FF66FF"/>
  <SolidColorBrush x:Key="Brush.Selection.Secondary.Border"
                   Color="#FF66FFFF"/>
  <SolidColorBrush x:Key="Brush.Selection.Secondary.Fill"
                   Color="#2266FFFF"/>

  <!-- =================================================================== -->
  <!-- TYPOGRAPHY TOKENS (Typography.*)                                     -->
  <!-- =================================================================== -->

  <FontFamily x:Key="Typography.Font.Primary">Segoe UI Variable Text, Segoe UI</FontFamily>
  <FontFamily x:Key="Typography.Font.Mono">Consolas</FontFamily>
  <FontFamily x:Key="Typography.Font.Icon">
    pack://application:,,,/DCM.App;component/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons
  </FontFamily>

  <sys:Double x:Key="Typography.Size.Caption">10</sys:Double>
  <sys:Double x:Key="Typography.Size.Body">14</sys:Double>
  <sys:Double x:Key="Typography.Size.Title">18</sys:Double>
  <sys:Double x:Key="Typography.Size.Hero">24</sys:Double>

  <FontWeight x:Key="Typography.Weight.Normal">Normal</FontWeight>
  <FontWeight x:Key="Typography.Weight.Medium">Medium</FontWeight>
  <FontWeight x:Key="Typography.Weight.SemiBold">SemiBold</FontWeight>
  <FontWeight x:Key="Typography.Weight.Bold">Bold</FontWeight>

</ResourceDictionary>
