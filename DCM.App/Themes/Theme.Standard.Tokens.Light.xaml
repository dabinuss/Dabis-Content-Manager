<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- =================================================================== -->
  <!-- LIGHT COLOR OVERRIDES                                                -->
  <!-- =================================================================== -->

  <Color x:Key="BackgroundColor">#FFEAEFF6</Color>
  <Color x:Key="SurfaceColor">#FFF3F6FB</Color>
  <Color x:Key="SurfaceLightColor">#FFE9EEF6</Color>
  <Color x:Key="SurfaceHoverColor">#FFE1E8F2</Color>
  <Color x:Key="SurfacePressedColor">#FFD7E0EC</Color>
  <Color x:Key="SurfaceElevatedColor">#FFF8FAFD</Color>
  <Color x:Key="SurfaceSunkenColor">#FFE2E9F3</Color>
  <Color x:Key="AppHeaderColor">#FFD7E0EC</Color>
  <Color x:Key="InputBackgroundColor">#FFF6F9FD</Color>
  <Color x:Key="InputFocusColor">#FFEFF4FB</Color>

  <Color x:Key="BorderColor">#FFB7C3D4</Color>
  <Color x:Key="BorderHoverColor">#FF97A8BE</Color>
  <Color x:Key="BorderStrongColor">#FF7D90AA</Color>

  <Color x:Key="PrimaryColor">#FF2F5FAF</Color>
  <Color x:Key="PrimaryHoverColor">#FF3A6ABD</Color>
  <Color x:Key="PrimaryPressedColor">#FF274F95</Color>
  <Color x:Key="PrimaryTextColor">#FFFFFFFF</Color>

  <Color x:Key="SuccessColor">#FF2D8D5B</Color>
  <Color x:Key="DangerColor">#FFC74A4A</Color>
  <Color x:Key="WarningColor">#FFB27A2A</Color>
  <Color x:Key="AccentRedColor">#FFC74A4A</Color>
  <Color x:Key="AccentRedHoverColor">#FFD96262</Color>
  <Color x:Key="MagicAIColor">#FFC4843D</Color>

  <Color x:Key="TextPrimaryColor">#FF111C2E</Color>
  <Color x:Key="TextSecondaryColor">#FF2F3E55</Color>
  <Color x:Key="TextMutedColor">#FF5E7087</Color>
  <Color x:Key="TextDisabledColor">#FF8998AB</Color>

  <Color x:Key="SidebarColor">#FFE7EDF5</Color>
  <Color x:Key="SidebarHoverColor">#FFDCE5F0</Color>

  <Color x:Key="DisabledBackgroundColor">#FFE6ECF4</Color>
  <Color x:Key="DisabledBorderColor">#FFC8D3E1</Color>
  <Color x:Key="ScrollBarTrackColor">#FFE1E8F1</Color>
  <Color x:Key="ScrollBarThumbColor">#FFAAB8CC</Color>

  <Color x:Key="ListItemSelectedColor">#FFCFDAE8</Color>
  <Color x:Key="ListDividerColor">#FFA6B6CB</Color>
  <Color x:Key="SectionDividerColor">#FF8EA2BC</Color>

  <!-- =================================================================== -->
  <!-- LIGHT BRUSH OVERRIDES                                                -->
  <!-- =================================================================== -->

  <SolidColorBrush x:Key="BackgroundBrush"
                   Color="{DynamicResource BackgroundColor}"/>
  <SolidColorBrush x:Key="SurfaceBrush"
                   Color="{DynamicResource SurfaceColor}"/>
  <SolidColorBrush x:Key="SurfaceLightBrush"
                   Color="{DynamicResource SurfaceLightColor}"/>
  <SolidColorBrush x:Key="SurfaceHoverBrush"
                   Color="{DynamicResource SurfaceHoverColor}"/>
  <SolidColorBrush x:Key="SurfacePressedBrush"
                   Color="{DynamicResource SurfacePressedColor}"/>
  <SolidColorBrush x:Key="SurfaceElevatedBrush"
                   Color="{DynamicResource SurfaceElevatedColor}"/>
  <SolidColorBrush x:Key="SurfaceSunkenBrush"
                   Color="{DynamicResource SurfaceSunkenColor}"/>
  <SolidColorBrush x:Key="AppHeaderBrush"
                   Color="{DynamicResource AppHeaderColor}"/>
  <SolidColorBrush x:Key="InputBackgroundBrush"
                   Color="{DynamicResource InputBackgroundColor}"/>
  <SolidColorBrush x:Key="InputFocusBrush"
                   Color="{DynamicResource InputFocusColor}"/>

  <SolidColorBrush x:Key="BorderBrush"
                   Color="{DynamicResource BorderColor}"/>
  <SolidColorBrush x:Key="BorderHoverBrush"
                   Color="{DynamicResource BorderHoverColor}"/>
  <SolidColorBrush x:Key="BorderStrongBrush"
                   Color="{DynamicResource BorderStrongColor}"/>

  <SolidColorBrush x:Key="PrimaryBrush"
                   Color="{DynamicResource PrimaryColor}"/>
  <SolidColorBrush x:Key="PrimaryHoverBrush"
                   Color="{DynamicResource PrimaryHoverColor}"/>
  <SolidColorBrush x:Key="PrimaryPressedBrush"
                   Color="{DynamicResource PrimaryPressedColor}"/>
  <SolidColorBrush x:Key="PrimaryTextBrush"
                   Color="{DynamicResource PrimaryTextColor}"/>

  <SolidColorBrush x:Key="SuccessBrush"
                   Color="{DynamicResource SuccessColor}"/>
  <SolidColorBrush x:Key="DangerBrush"
                   Color="{DynamicResource DangerColor}"/>
  <SolidColorBrush x:Key="WarningBrush"
                   Color="{DynamicResource WarningColor}"/>
  <SolidColorBrush x:Key="AccentRedBrush"
                   Color="{DynamicResource AccentRedColor}"/>
  <SolidColorBrush x:Key="AccentRedHoverBrush"
                   Color="{DynamicResource AccentRedHoverColor}"/>
  <SolidColorBrush x:Key="MagicAIBrush"
                   Color="{DynamicResource MagicAIColor}"/>
  <LinearGradientBrush x:Key="MagicAIGradientBrush"
                       StartPoint="0,0"
                       EndPoint="1,1">
    <GradientStop Color="#FF9EBEDE"
                  Offset="0.0"/>
    <GradientStop Color="#FF2F5FAF"
                  Offset="0.7"/>
  </LinearGradientBrush>

  <SolidColorBrush x:Key="TextPrimaryBrush"
                   Color="{DynamicResource TextPrimaryColor}"/>
  <SolidColorBrush x:Key="TextSecondaryBrush"
                   Color="{DynamicResource TextSecondaryColor}"/>
  <SolidColorBrush x:Key="TextMutedBrush"
                   Color="{DynamicResource TextMutedColor}"/>
  <SolidColorBrush x:Key="TextDisabledBrush"
                   Color="{DynamicResource TextDisabledColor}"/>

  <SolidColorBrush x:Key="SidebarBrush"
                   Color="{DynamicResource SidebarColor}"/>
  <SolidColorBrush x:Key="SidebarHoverBrush"
                   Color="{DynamicResource SidebarHoverColor}"/>

  <SolidColorBrush x:Key="DisabledBackgroundBrush"
                   Color="{DynamicResource DisabledBackgroundColor}"/>
  <SolidColorBrush x:Key="DisabledBorderBrush"
                   Color="{DynamicResource DisabledBorderColor}"/>
  <SolidColorBrush x:Key="ScrollBarTrackBrush"
                   Color="{DynamicResource ScrollBarTrackColor}"/>
  <SolidColorBrush x:Key="ScrollBarThumbBrush"
                   Color="{DynamicResource ScrollBarThumbColor}"/>

  <SolidColorBrush x:Key="ListItemSelectedBrush"
                   Color="{DynamicResource ListItemSelectedColor}"/>
  <SolidColorBrush x:Key="ListDividerBrush"
                   Color="{DynamicResource ListDividerColor}"/>
  <SolidColorBrush x:Key="SectionDividerBrush"
                   Color="{DynamicResource SectionDividerColor}"/>

</ResourceDictionary>

