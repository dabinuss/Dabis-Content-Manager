<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:win="clr-namespace:System.Windows;assembly=PresentationFramework"
                    xmlns:core="clr-namespace:DCM.Core.Models;assembly=DCM.Core">

  <!-- Layout relies on Visual tokens (Brushes, Fonts, Sizes, etc.) -->
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="DarkTheme.Visual.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <!-- =================================================================== -->
  <!-- SPACING SYSTEM - consistent spacing                                  -->
  <!-- =================================================================== -->

  <GridLength x:Key="SpacingXS">2</GridLength>
  <GridLength x:Key="SpacingS">4</GridLength>
  <GridLength x:Key="SpacingM">8</GridLength>
  <GridLength x:Key="SpacingL">12</GridLength>
  <GridLength x:Key="SpacingXL">16</GridLength>
  <GridLength x:Key="SpacingXXL">24</GridLength>
  <GridLength x:Key="SpacingXXXL">32</GridLength>

  <!-- Thickness presets for common margin/padding combinations -->
  <Thickness x:Key="SpacingAllXS">2</Thickness>
  <Thickness x:Key="SpacingAllS">4</Thickness>
  <Thickness x:Key="SpacingAllM">8</Thickness>
  <Thickness x:Key="SpacingAllL">12</Thickness>
  <Thickness x:Key="SpacingAllXL">16</Thickness>
  <Thickness x:Key="SpacingAllXXL">24</Thickness>
  <Thickness x:Key="SpacingAllXXXL">32</Thickness>

  <!-- Horizontale Spacing -->
  <Thickness x:Key="SpacingHorizontalS">4,0</Thickness>
  <Thickness x:Key="SpacingHorizontalM">8,0</Thickness>
  <Thickness x:Key="SpacingHorizontalL">12,0</Thickness>
  <Thickness x:Key="SpacingHorizontalXL">16,0</Thickness>

  <!-- Vertikale Spacing -->
  <Thickness x:Key="SpacingVerticalS">0,4</Thickness>
  <Thickness x:Key="SpacingVerticalM">0,8</Thickness>
  <Thickness x:Key="SpacingVerticalL">0,12</Thickness>
  <Thickness x:Key="SpacingVerticalXL">0,16</Thickness>

  <!-- Sidebar Spacing -->
  <Thickness x:Key="SidebarPadding">12,16,12,16</Thickness>
  <Thickness x:Key="SidebarItemMargin">6,6</Thickness>
  <Thickness x:Key="SidebarItemPadding">6,10</Thickness>

  <!-- Content Spacing -->
  <Thickness x:Key="ContentPadding">16</Thickness>
  <Thickness x:Key="HeaderPadding">16,8</Thickness>
  <Thickness x:Key="GroupBoxPadding">12</Thickness>
  <Thickness x:Key="GroupBoxMargin">0,0,0,16</Thickness>
  <sys:Double x:Key="SettingsContentMaxWidth">1200</sys:Double>
  <sys:Double x:Key="SettingsColumnMinWidth">450</sys:Double>
  <sys:Double x:Key="SettingsColumnSpacing">24</sys:Double>
  <Thickness x:Key="SettingsSectionSpacing">0,0,0,16</Thickness>
  <Thickness x:Key="SettingsSectionSpacingCompact">0,0,0,8</Thickness>

  <!-- =================================================================== -->
  <!-- CORNER RADIUS SYSTEM - Einheitliche Eckenradien                       -->
  <!-- =================================================================== -->

  <CornerRadius x:Key="RadiusNone">0</CornerRadius>
  <CornerRadius x:Key="RadiusS">6</CornerRadius>
  <CornerRadius x:Key="RadiusM">10</CornerRadius>
  <CornerRadius x:Key="RadiusL">12</CornerRadius>
  <CornerRadius x:Key="RadiusXL">16</CornerRadius>
  <CornerRadius x:Key="RadiusPill">20</CornerRadius>
  <CornerRadius x:Key="RadiusCircle">999</CornerRadius>

  <!-- =================================================================== -->
  <!-- SIZE SYSTEM - Standard Größen für Komponenten                        -->
  <!-- =================================================================== -->

  <!-- Border Thickness -->
  <sys:Double x:Key="BorderThicknessNone">0</sys:Double>
  <sys:Double x:Key="BorderThicknessThin">0.5</sys:Double>
  <sys:Double x:Key="BorderThicknessNormal">1</sys:Double>
  <sys:Double x:Key="BorderThicknessThick">2</sys:Double>

  <Thickness x:Key="BorderThickness1">1</Thickness>
  <Thickness x:Key="BorderThickness0">0</Thickness>

  <!-- Divider Heights -->
  <sys:Double x:Key="DividerHeight">1</sys:Double>

  <!-- Icon Sizes (für Container/Viewbox) -->
  <sys:Double x:Key="IconSizeXS">12</sys:Double>
  <sys:Double x:Key="IconSizeS">16</sys:Double>
  <sys:Double x:Key="IconSizeM">20</sys:Double>
  <sys:Double x:Key="IconSizeL">24</sys:Double>
  <sys:Double x:Key="IconSizeXL">32</sys:Double>

  <!-- Thumbnail/Preview Sizes -->
  <sys:Double x:Key="ThumbnailSizeS">48</sys:Double>
  <sys:Double x:Key="ThumbnailSizeM">72</sys:Double>
  <sys:Double x:Key="ThumbnailSizeL">96</sys:Double>
  <sys:Double x:Key="ThumbnailSizeXL">120</sys:Double>

  <!-- Card MinHeight -->
  <sys:Double x:Key="CardMinHeightS">80</sys:Double>
  <sys:Double x:Key="CardMinHeightM">96</sys:Double>
  <sys:Double x:Key="CardMinHeightL">140</sys:Double>
  <sys:Double x:Key="CardMinHeightXL">180</sys:Double>

  <!-- Input/Control MinHeight -->
  <sys:Double x:Key="ControlMinHeightS">28</sys:Double>
  <sys:Double x:Key="ControlMinHeightM">30</sys:Double>
  <sys:Double x:Key="ControlMinHeightL">44</sys:Double>

  <!-- ComboBox/Input MinWidth -->
  <sys:Double x:Key="InputMinWidthXS">80</sys:Double>
  <sys:Double x:Key="InputMinWidthS">160</sys:Double>
  <sys:Double x:Key="InputMinWidthM">200</sys:Double>
  <sys:Double x:Key="InputMinWidthL">260</sys:Double>
  <sys:Double x:Key="InputMinWidthXL">320</sys:Double>

  <!-- Slider Width -->
  <sys:Double x:Key="SliderWidth">140</sys:Double>

  <!-- TextArea MinHeight -->
  <sys:Double x:Key="TextAreaMinHeightS">80</sys:Double>
  <sys:Double x:Key="TextAreaMinHeightM">110</sys:Double>
  <sys:Double x:Key="TextAreaMinHeightL">140</sys:Double>
  <sys:Double x:Key="TextAreaMinHeightXL">180</sys:Double>

  <!-- Detail Panel MinHeight -->
  <sys:Double x:Key="DetailPanelMinHeight">360</sys:Double>

  <!-- Progress Bar Height -->
  <sys:Double x:Key="ProgressBarHeight">6</sys:Double>

  <!-- Button Width -->
  <sys:Double x:Key="ButtonMinWidthS">80</sys:Double>
  <sys:Double x:Key="ButtonMinWidthM">96</sys:Double>
  <sys:Double x:Key="ButtonMinWidthL">160</sys:Double>

  <!-- =================================================================== -->
  <!-- PADDING SYSTEM - Standard Padding für Komponenten                    -->
  <!-- =================================================================== -->

  <!-- Compact Padding (für Tags, Chips, kleine Elemente) -->
  <Thickness x:Key="PaddingCompact">6,2</Thickness>
  <Thickness x:Key="PaddingCompactVertical">4,6</Thickness>

  <!-- Button Padding -->
  <Thickness x:Key="ButtonPaddingS">8,4</Thickness>
  <Thickness x:Key="ButtonPaddingM">16,5</Thickness>
  <Thickness x:Key="ButtonPaddingL">24,10</Thickness>

  <!-- Card/Section Padding -->
  <Thickness x:Key="CardPaddingS">8,8</Thickness>
  <Thickness x:Key="CardPaddingM">12,12</Thickness>
  <Thickness x:Key="CardPaddingL">16,16</Thickness>
  <Thickness x:Key="CardPaddingXL">20,26</Thickness>

  <!-- Input Padding -->
  <Thickness x:Key="InputPaddingS">3,3</Thickness>
  <Thickness x:Key="InputPaddingM">4,4</Thickness>

  <!-- Input MinHeight -->
  <sys:Double x:Key="InputMinHeight">34</sys:Double>

  <!-- View Root Margin (standard für alle Views) -->
  <Thickness x:Key="ViewRootMargin">0,0,8,0</Thickness>

  <!-- Label Spacing -->
  <Thickness x:Key="LabelMarginBottom">0,0,0,8</Thickness>
  <Thickness x:Key="LabelMarginBottomXS">0,0,0,2</Thickness>
  <Thickness x:Key="LabelMarginBottomSmall">0,0,0,4</Thickness>
  <Thickness x:Key="LabelMarginBottomM">0,0,0,6</Thickness>
  <Thickness x:Key="LabelMarginBottomL">0,0,0,12</Thickness>
  <Thickness x:Key="LabelMarginBottomXL">0,0,0,24</Thickness>
  <Thickness x:Key="LabelMarginTop">0,8,0,0</Thickness>
  <Thickness x:Key="LabelMarginTopM">0,6,0,0</Thickness>
  <Thickness x:Key="LabelMarginTopSmall">0,4,0,0</Thickness>
  <Thickness x:Key="LabelMarginTopXS">0,2,0,0</Thickness>
  <Thickness x:Key="LabelMarginTopL">0,12,0,0</Thickness>

  <!-- Section Spacing -->
  <Thickness x:Key="SectionMarginTop">0,16,0,0</Thickness>
  <Thickness x:Key="SectionMarginBottom">0,0,0,16</Thickness>
  <Thickness x:Key="SectionHeaderMarginBottom">0,0,0,10</Thickness>

</ResourceDictionary>
