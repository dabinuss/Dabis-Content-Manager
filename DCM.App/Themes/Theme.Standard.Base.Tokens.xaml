<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:win="clr-namespace:System.Windows;assembly=PresentationFramework"
                    xmlns:core="clr-namespace:DCM.Core.Models;assembly=DCM.Core">


  <FontFamily x:Key="PrimaryFont">Segoe UI Variable Text, Segoe UI</FontFamily>
  <FontFamily x:Key="LogFont">Consolas</FontFamily>
  <FontFamily x:Key="MaterialIconsFont">
    pack://application:,,,/DCM.App;component/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons
  </FontFamily>

  <!-- Font Sizes -->
  <sys:Double x:Key="FontSizeXXS">8</sys:Double>
  <sys:Double x:Key="FontSizeXS">10</sys:Double>
  <sys:Double x:Key="FontSizeS">12</sys:Double>
  <sys:Double x:Key="FontSizeM">14</sys:Double>
  <sys:Double x:Key="FontSizeL">18</sys:Double>
  <sys:Double x:Key="FontSizeXL">24</sys:Double>
  <sys:Double x:Key="FontSize24">28</sys:Double>
  <sys:Double x:Key="FontSizeXXL">36</sys:Double>
  <sys:Double x:Key="FontSizeXXXL">56</sys:Double>
  <sys:Double x:Key="FontSizeXXXXL">112</sys:Double>
  <sys:Double x:Key="{x:Static win:SystemParameters.VerticalScrollBarWidthKey}">6</sys:Double>
  <sys:Double x:Key="{x:Static win:SystemParameters.HorizontalScrollBarHeightKey}">6</sys:Double>

  <!-- Font Weights -->
  <FontWeight x:Key="FontWeightLight">Light</FontWeight>
  <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
  <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
  <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
  <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

  <!-- ZENTRALE FARBPALETTE                                            -->

  <!-- Hintergrund -->
  <Color x:Key="BackgroundColor">#0F1115</Color>
  <Color x:Key="SurfaceColor">#151922</Color>
  <Color x:Key="SurfaceLightColor">#1D2433</Color>
  <Color x:Key="SurfaceHoverColor">#1B2130</Color>
  <Color x:Key="SurfacePressedColor">#222A3B</Color>
  <Color x:Key="SurfaceElevatedColor">#1A2130</Color>
  <Color x:Key="SurfaceSunkenColor">#0C0F15</Color>
  <Color x:Key="AppHeaderColor">#1A2130</Color>
  <Color x:Key="InputBackgroundColor">#121722</Color>
  <Color x:Key="InputFocusColor">#161D2B</Color>

  <!-- Rahmen -->
  <Color x:Key="BorderColor">#2A3345</Color>
  <Color x:Key="BorderHoverColor">#3A4761</Color>
  <Color x:Key="BorderStrongColor">#445372</Color>

  <!-- Primary color (blue) -->
  <Color x:Key="PrimaryColor">#6AA9FF</Color>
  <Color x:Key="PrimaryHoverColor">#86BCFF</Color>
  <Color x:Key="PrimaryPressedColor">#4E93F0</Color>
  <Color x:Key="PrimaryTextColor">#0C1118</Color>

  <!-- Akzentfarben -->
  <Color x:Key="SuccessColor">#28C76F</Color>
  <Color x:Key="DangerColor">#FF5C5C</Color>
  <Color x:Key="WarningColor">#F5A524</Color>
  <Color x:Key="AccentRedColor">#FF5C5C</Color>
  <Color x:Key="AccentRedHoverColor">#FF7A72</Color>
  <Color x:Key="MagicAIColor">#FFB34D</Color>

  <!-- Text -->
  <Color x:Key="TextPrimaryColor">#E9EEF5</Color>
  <Color x:Key="TextSecondaryColor">#B3BDCC</Color>
  <Color x:Key="TextMutedColor">#7E8796</Color>
  <Color x:Key="TextDisabledColor">#545D6E</Color>

  <!-- Sidebar -->
  <Color x:Key="SidebarColor">#0D111A</Color>
  <Color x:Key="SidebarHoverColor">#161B26</Color>

  <!-- Disabled -->
  <Color x:Key="DisabledBackgroundColor">#11151F</Color>
  <Color x:Key="DisabledBorderColor">#232C3C</Color>
  <Color x:Key="ScrollBarTrackColor">#101622</Color>
  <Color x:Key="ScrollBarThumbColor">#2A3345</Color>
  <Color x:Key="PlatformYouTubeColor">#FF4444</Color>
  <Color x:Key="PlatformInstagramColor">#C13584</Color>
  <Color x:Key="OverlayDimColor">#80000000</Color>
  <Color x:Key="OverlayMediumColor">#66000000</Color>

  <!-- BRUSHES                                                          -->

  <SolidColorBrush x:Key="BackgroundBrush"
                   Color="{DynamicResource BackgroundColor}"/>
  <SolidColorBrush x:Key="SurfaceBrush"
                   Color="{DynamicResource SurfaceColor}"/>
  <SolidColorBrush x:Key="SurfaceLightBrush"
                   Color="{DynamicResource SurfaceLightColor}"/>
  <SolidColorBrush x:Key="SurfaceHoverBrush"
                   Color="{DynamicResource SurfaceHoverColor}"/>
  <SolidColorBrush x:Key="SurfacePressedBrush"
                   Color="{DynamicResource SurfacePressedColor}"/>
  <SolidColorBrush x:Key="SurfaceElevatedBrush"
                   Color="{DynamicResource SurfaceElevatedColor}"/>
  <SolidColorBrush x:Key="SurfaceSunkenBrush"
                   Color="{DynamicResource SurfaceSunkenColor}"/>
  <SolidColorBrush x:Key="AppHeaderBrush"
                   Color="{DynamicResource AppHeaderColor}"/>
  <SolidColorBrush x:Key="InputBackgroundBrush"
                   Color="{DynamicResource InputBackgroundColor}"/>
  <SolidColorBrush x:Key="InputFocusBrush"
                   Color="{DynamicResource InputFocusColor}"/>

  <SolidColorBrush x:Key="BorderBrush"
                   Color="{DynamicResource BorderColor}"/>
  <SolidColorBrush x:Key="BorderHoverBrush"
                   Color="{DynamicResource BorderHoverColor}"/>
  <SolidColorBrush x:Key="BorderStrongBrush"
                   Color="{DynamicResource BorderStrongColor}"/>

  <SolidColorBrush x:Key="PrimaryBrush"
                   Color="{DynamicResource PrimaryColor}"/>
  <SolidColorBrush x:Key="PrimaryHoverBrush"
                   Color="{DynamicResource PrimaryHoverColor}"/>
  <SolidColorBrush x:Key="PrimaryPressedBrush"
                   Color="{DynamicResource PrimaryPressedColor}"/>
  <SolidColorBrush x:Key="PrimaryTextBrush"
                   Color="{DynamicResource PrimaryTextColor}"/>

  <SolidColorBrush x:Key="SuccessBrush"
                   Color="{DynamicResource SuccessColor}"/>
  <SolidColorBrush x:Key="DangerBrush"
                   Color="{DynamicResource DangerColor}"/>
  <SolidColorBrush x:Key="WarningBrush"
                   Color="{DynamicResource WarningColor}"/>
  <SolidColorBrush x:Key="AccentRedBrush"
                   Color="{DynamicResource AccentRedColor}"/>
  <SolidColorBrush x:Key="AccentRedHoverBrush"
                   Color="{DynamicResource AccentRedHoverColor}"/>
  <SolidColorBrush x:Key="PlatformYouTubeBrush"
                   Color="{DynamicResource PlatformYouTubeColor}"/>
  <SolidColorBrush x:Key="PlatformInstagramBrush"
                   Color="{DynamicResource PlatformInstagramColor}"/>
  <SolidColorBrush x:Key="OverlayDimBrush"
                   Color="{DynamicResource OverlayDimColor}"/>
  <SolidColorBrush x:Key="OverlayMediumBrush"
                   Color="{DynamicResource OverlayMediumColor}"/>
  <SolidColorBrush x:Key="MagicAIBrush"
                   Color="{DynamicResource MagicAIColor}"/>
  <LinearGradientBrush x:Key="MagicAIGradientBrush"
                       StartPoint="0,0"
                       EndPoint="1,1">
    <GradientStop Color="#FF2EE6A6"
                  Offset="0.0"/>
    <GradientStop Color="#FF3B82F6"
                  Offset="0.7"/>
  </LinearGradientBrush>

  <SolidColorBrush x:Key="TextPrimaryBrush"
                   Color="{DynamicResource TextPrimaryColor}"/>
  <SolidColorBrush x:Key="TextSecondaryBrush"
                   Color="{DynamicResource TextSecondaryColor}"/>
  <SolidColorBrush x:Key="TextMutedBrush"
                   Color="{DynamicResource TextMutedColor}"/>
  <SolidColorBrush x:Key="TextDisabledBrush"
                   Color="{DynamicResource TextDisabledColor}"/>

  <SolidColorBrush x:Key="SidebarBrush"
                   Color="{DynamicResource SidebarColor}"/>
  <SolidColorBrush x:Key="SidebarHoverBrush"
                   Color="{DynamicResource SidebarHoverColor}"/>

  <SolidColorBrush x:Key="DisabledBackgroundBrush"
                   Color="{DynamicResource DisabledBackgroundColor}"/>
  <SolidColorBrush x:Key="DisabledBorderBrush"
                   Color="{DynamicResource DisabledBorderColor}"/>
  <SolidColorBrush x:Key="ScrollBarTrackBrush"
                   Color="{DynamicResource ScrollBarTrackColor}"/>
  <SolidColorBrush x:Key="ScrollBarThumbBrush"
                   Color="{DynamicResource ScrollBarThumbColor}"/>

  <!-- Master-Detail List Colors (used by Upload, Accounts, Presets views) -->
  <Color x:Key="ListItemSelectedColor">#2A3448</Color>
  <Color x:Key="ListDividerColor">#4D596F</Color>

  <SolidColorBrush x:Key="ListItemSelectedBrush"
                   Color="{DynamicResource ListItemSelectedColor}"/>
  <SolidColorBrush x:Key="ListDividerBrush"
                   Color="{DynamicResource ListDividerColor}"/>

  <!-- Master-Detail List Corner Radius -->
  <CornerRadius x:Key="ListItemSelectedCornerRadius">6,0,0,6</CornerRadius>

  <!-- Toggle Switch Colors (used by Accounts auto-connect toggle) -->
  <Color x:Key="ToggleTrackColor">#505765</Color>
  <Color x:Key="ToggleThumbOffColor">#BEBEBE</Color>
  <Color x:Key="ToggleThumbTextColor">#2B2B2B</Color>
  <Color x:Key="SuccessSubtleColor">#264CAF50</Color>
  <Color x:Key="SuccessOverlayColor">#2000FF00</Color>
  <Color x:Key="SuccessSelectedColor">#1A4CAF50</Color>

  <SolidColorBrush x:Key="ToggleTrackBrush"
                   Color="{DynamicResource ToggleTrackColor}"/>
  <SolidColorBrush x:Key="ToggleThumbOffBrush"
                   Color="{DynamicResource ToggleThumbOffColor}"/>
  <SolidColorBrush x:Key="ToggleThumbTextBrush"
                   Color="{DynamicResource ToggleThumbTextColor}"/>
  <SolidColorBrush x:Key="SuccessSubtleBrush"
                   Color="{DynamicResource SuccessSubtleColor}"/>
  <SolidColorBrush x:Key="SuccessOverlayBrush"
                   Color="{DynamicResource SuccessOverlayColor}"/>
  <SolidColorBrush x:Key="SuccessSelectedBrush"
                   Color="{DynamicResource SuccessSelectedColor}"/>

  <!-- Section Divider (lighter than ListDivider) -->
  <Color x:Key="SectionDividerColor">#6A768C</Color>
  <SolidColorBrush x:Key="SectionDividerBrush"
                   Color="{DynamicResource SectionDividerColor}"/>

  <!-- TEXT STYLES                                                      -->

  <Style x:Key="TextHeadingXL"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource PrimaryFont}"/>
    <Setter Property="FontSize"
            Value="{DynamicResource FontSizeXL}"/>
    <Setter Property="FontWeight"
            Value="{DynamicResource FontWeightSemiBold}"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style x:Key="TextHeadingL"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource PrimaryFont}"/>
    <Setter Property="FontSize"
            Value="{DynamicResource FontSizeL}"/>
    <Setter Property="FontWeight"
            Value="{DynamicResource FontWeightSemiBold}"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style x:Key="TextBody"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource PrimaryFont}"/>
    <Setter Property="FontSize"
            Value="{DynamicResource FontSizeM}"/>
    <Setter Property="FontWeight"
            Value="{DynamicResource FontWeightNormal}"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style x:Key="TextSecondary"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource PrimaryFont}"/>
    <Setter Property="FontSize"
            Value="{DynamicResource FontSizeS}"/>
    <Setter Property="FontWeight"
            Value="{DynamicResource FontWeightNormal}"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextSecondaryBrush}"/>
  </Style>

  <Style x:Key="TextCaption"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource PrimaryFont}"/>
    <Setter Property="FontSize"
            Value="{DynamicResource FontSizeXS}"/>
    <Setter Property="FontWeight"
            Value="{DynamicResource FontWeightNormal}"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextMutedBrush}"/>
  </Style>

  <Style x:Key="TextLabel"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource PrimaryFont}"/>
    <Setter Property="FontSize"
            Value="{DynamicResource FontSizeS}"/>
    <Setter Property="FontWeight"
            Value="{DynamicResource FontWeightSemiBold}"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextMutedBrush}"/>
  </Style>

  <Style x:Key="SectionHeader"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource PrimaryFont}"/>
    <Setter Property="FontSize"
            Value="{DynamicResource FontSizeM}"/>
    <Setter Property="FontWeight"
            Value="{DynamicResource FontWeightSemiBold}"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <!-- Large Section Header - for main areas -->
  <Style x:Key="SectionHeaderLarge"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource PrimaryFont}"/>
    <Setter Property="FontSize"
            Value="{DynamicResource FontSizeL}"/>
    <Setter Property="FontWeight"
            Value="{DynamicResource FontWeightSemiBold}"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextPrimaryBrush}"/>
    <Setter Property="Margin"
            Value="0,0,0,12"/>
  </Style>

  <!-- Section Divider - horizontal line between sections -->
  <Style x:Key="SectionDivider"
         TargetType="Border">
    <Setter Property="Height"
            Value="1"/>
    <Setter Property="Background"
            Value="{DynamicResource BorderBrush}"/>
    <Setter Property="Margin"
            Value="0,16,0,16"/>
    <Setter Property="HorizontalAlignment"
            Value="Stretch"/>
    <Setter Property="SnapsToDevicePixels"
            Value="True"/>
  </Style>

  <!-- ICON STYLE                                                       -->

  <Style x:Key="NavIcon"
         TargetType="Path">
    <Setter Property="Width"
            Value="24"/>
    <Setter Property="Height"
            Value="24"/>
    <Setter Property="Stretch"
            Value="Uniform"/>
    <Setter Property="Fill"
            Value="{DynamicResource TextMutedBrush}"/>
    <Setter Property="Margin"
            Value="0,0,24,0"/>
  </Style>


  <!-- Icon base style: for all TextBlock icons -->
  <Style x:Key="Icon"
         TargetType="TextBlock">
    <Setter Property="FontFamily"
            Value="{DynamicResource MaterialIconsFont}"/>
    <!-- Value="Segoe Fluent Icons"/> -->
    <Setter Property="FontSize"
            Value="16"/>
    <Setter Property="VerticalAlignment"
            Value="Center"/>
    <Setter Property="TextOptions.TextFormattingMode"
            Value="Display"/>
    <Setter Property="TextOptions.TextRenderingMode"
            Value="ClearType"/>
    <Setter Property="Margin"
            Value="0,0,10,0"/>
    <Setter Property="Foreground"
            Value="{DynamicResource TextSecondaryBrush}"/>
  </Style>

  <Style x:Key="IconS"
         TargetType="TextBlock"
         BasedOn="{StaticResource Icon}">
    <Setter Property="FontSize"
            Value="10"/>
  </Style>
  <Style x:Key="IconM"
         TargetType="TextBlock"
         BasedOn="{StaticResource Icon}">
    <Setter Property="FontSize"
            Value="14"/>
  </Style>
  <Style x:Key="IconL"
         TargetType="TextBlock"
         BasedOn="{StaticResource Icon}">
    <Setter Property="FontSize"
            Value="18"/>
  </Style>
  <Style x:Key="IconXL"
         TargetType="TextBlock"
         BasedOn="{StaticResource Icon}">
    <Setter Property="FontSize"
            Value="24"/>
  </Style>
  <Style x:Key="IconXXL"
         TargetType="TextBlock"
         BasedOn="{StaticResource Icon}">
    <Setter Property="FontSize"
            Value="32"/>
  </Style>
  <Style x:Key="Icon64"
         TargetType="TextBlock"
         BasedOn="{StaticResource Icon}">
    <Setter Property="FontSize"
            Value="64"/>
  </Style>

</ResourceDictionary>

